<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_524_Switch">
		<control type="group">
			<visible>Control.IsVisible(524)</visible>
			<animation type="Visible">
				<effect type="slide" start="0,1000" end="0" center="auto" tween="Cubic" easing="out" time="500"/>
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="0,1000" center="auto" tween="Cubic" easing="in" time="500"/>
			</animation>

			<!--> List -->
			<control type="group">
				<control type="fixedlist" id="524">
					<centertop>50%</centertop>
					<left>0</left>
					<width>120%</width>
					<height>540</height>					
					<onup>3000</onup>
					<ondown>noop</ondown>
					<onleft>noop</onleft>
					<onright>521</onright>
					<preloaditems>2</preloaditems>
					<focusposition>0</focusposition>
					<movement>0</movement>
					<orientation>horizontal</orientation>
					<viewtype label="31521">list</viewtype>
					<visible>[String.Contains(System.CurrentWindow,Game)] | String.Contains(Container.Content,games)|String.Contains(System.CurrentWindow,Select Dialog)</visible>
					<scrolltime tween="sine" easing="inout">400</scrolltime>
					<itemlayout width="400" height="450">
						<control type="group">
							<top>70</top>
							<left>120</left>
							<control type="image">
								<width>400</width>
								<height>400</height>
								<aspectratio>scale</aspectratio>
								<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
							</control>
							<control type="image">
								<width>400</width>
								<height>400</height>
								<aspectratio>scale</aspectratio>
								<texture>$INFO[ListItem.Icon]</texture>
							</control>
							<control type="image">
								<width>400</width>
								<height>400</height>
								<aspectratio>scale</aspectratio>
								<texture>$VAR[ConsoleLogo]</texture>
							</control>
							<control type="image">
								<width>400</width>
								<height>400</height>
								<texture colordiffuse="$VAR[DiffuseColor]">views/white_100.png</texture>
							</control>
						</control>
						<include>WatchedIndicator</include>
					</itemlayout>
					<focusedlayout width="480" height="450">
						<control type="group">
							<top>30</top>
							<left>120</left>
							<animation condition="ListItem.IsPlaying" effect="fade" center="auto" start="100" end="90" time="500" pulse="true">Conditional</animation>
							<control type="image">
								<top>-32</top>
								<left>-32</left>
								<width>545</width>
								<height>545</height>
								<texture colordiffuse="$VAR[DarkFade]" border="90">fo.png</texture>
								<visible>Control.HasFocus(524)</visible>
							</control>
							<control type="image">
								<width>480</width>
								<height>480</height>
								<aspectratio>scale</aspectratio>
								<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
							</control>
							<control type="image">
								<width>480</width>
								<height>480</height>
								<aspectratio>scale</aspectratio>
								<texture>$INFO[ListItem.Icon]</texture>
							</control>
							<control type="image">
								<width>480</width>
								<height>480</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$VAR[ConsoleLogo]</texture>
							</control>
						</control>
					</focusedlayout>
				</control>

				<control type="label">
					<left>50</left>
					<top>15%</top>
					<width>100%</width>
					<height>70</height>
					<font>Home</font>
					<align>Left</align>
					<texturefocus colordiffuse="$VAR[SecondaryColor]">color_white.png</texturefocus>
					<texturenofocus colordiffuse="$VAR[SecondaryColor]">color_white.png</texturenofocus>
					<textcolor>$VAR[White]</textcolor>
					<label>$VAR[ConsoleName]</label>
					<animation type="Unfocus">
						<effect type="fade" start="100" end="0" center="auto" tween="sine"  easing="inout" time="100"/>
					</animation>
				</control>
			</control>
		</control>
	</include>
</includes>