<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_522_ShowcaseSquare">
		<control type="group">
			<visible>Control.IsVisible(522)</visible>
			<animation type="Visible">
				<effect type="slide" start="0,1000" end="0" center="auto" tween="Cubic" easing="out" time="500"/>
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="0,1000" center="auto" tween="Cubic" easing="in" time="500"/>
			</animation>

			<!--> List -->
			<control type="group">
				<animation type="Conditional" condition="Player.HasVideo">
					<effect type="slide" start="0" end="56,330" time="500" tween="cubic" easing="inout" />
					<effect type="zoom" start="100" end="90" time="500" tween="cubic" easing="inout" />
				</animation>
				<animation condition="![Control.HasFocus(522) | Control.HasFocus(60) | Control.HasFocus(3000) | Control.HasFocus(9051)]" effect="slide" center="auto" start="0" end="0,150" time="100">Conditional</animation>
				<control type="wraplist" id="522">
					<centertop>50%</centertop>
					<left>-200</left>
					<width>120%</width>
					<height>540</height>
					<onleft>Back</onleft>
					<onright>521</onright>					
					<onup condition="Player.HasVideo">9050</onup>
					<ondown condition="Player.HasAudio">9051</ondown>
					<ondown>60</ondown>
					<ondown>3000</ondown>
					<pagecontrol>60</pagecontrol>
					<preloaditems>2</preloaditems>
					<focusposition>2</focusposition>
					<movement>-1</movement>
					<orientation>horizontal</orientation>
					<viewtype label="31521">list</viewtype>
					<scrolltime tween="sine" easing="inout">400</scrolltime>
					<visible>String.Contains(Container.Content,songs) | String.Contains(Container.Content,albums)  | String.Contains(Container.Content,games) | String.Contains(Container.FolderPath,androidapp://)</visible>
					<itemlayout width="400" height="450">
						<control type="group">
							<top>70</top>
							<left>120</left>
							<control type="image">
								<width>400</width>
								<height>400</height>
								<aspectratio>scale</aspectratio>
								<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
							</control>
							<control type="image">
								<width>400</width>
								<height>400</height>
								<aspectratio>scale</aspectratio>
								<texture background="false">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="image">
								<width>400</width>
								<height>400</height>
								<texture colordiffuse="$VAR[DiffuseColor]">views/white_100.png</texture>
							</control>
						</control>
						<include>WatchedIndicator</include>
					</itemlayout>
					<focusedlayout width="480" height="450">
						<control type="group">
							<top>30</top>
							<left>120</left>
							<animation condition="ListItem.IsPlaying" effect="fade" center="auto" start="100" end="90" time="500" pulse="true">Conditional</animation>
							<control type="image">
								<top>-32</top>
								<left>-32</left>
								<width>545</width>
								<height>545</height>
								<texture colordiffuse="$VAR[DarkFade]" border="90">fo.png</texture>
								<visible>Control.HasFocus(522)</visible>
							</control>
							<control type="image">
								<width>480</width>
								<height>480</height>
								<aspectratio>scale</aspectratio>
								<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
							</control>
							<control type="image">
								<width>480</width>
								<height>480</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
						</control>
					</focusedlayout>
				</control>

				<control type="label">
					<centerleft>50%</centerleft>
					<centertop>75%</centertop>
					<width>100%</width>
					<height>70</height>
					<font>tile</font>
					<align>center</align>
					<texturefocus colordiffuse="$VAR[SecondaryColor]">color_white.png</texturefocus>
					<texturenofocus colordiffuse="$VAR[SecondaryColor]">color_white.png</texturenofocus>
					<textcolor>$VAR[White]</textcolor>
					<label>$INFO[Container(522).ListItem(0).label]</label>
					<animation type="Unfocus">
						<effect type="fade" start="100" end="0" center="auto" tween="sine"  easing="inout" time="100"/>
					</animation>
					<visible>Control.HasFocus(522)</visible>
				</control>
			</control>
		</control>
		<include>Logo</include>
	</include>
</includes>