<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_531_ShowcasePoster">
		<control type="group">
			<visible>Control.IsVisible(531) + !Player.HasVideo</visible>
			<animation type="Conditional" condition="Control.HasFocus(9050)">
				<effect type="fade" start="2000" end="0,0" time="500" tween="cubic" easing="inout" />
			</animation>
			<!--> Vignette <!-->		
			<control type="image">
				<include>FullscreenDimensions</include>
				<aspectratio>stretch</aspectratio>
				<texture flipx="true" colordiffuse="$VAR[Black]">views\vignetteInfo_light.png</texture>
			</control>
			
			<control type="label">
				<left>50</left>
				<top>20</top>
				<width>90%</width>
				<height>70</height>
				<font>Med60</font>
				<align>left</align>
				<scroll>true</scroll>
				<textcolor>$VAR[White]</textcolor>
				<label>$VAR[ListLabelNF]</label> 
			</control>
			<control type="textbox">
				<left>50</left>
				<top>120</top>
				<width>1000</width>
				<height>300</height>
				<font>Light27</font>
				<label>$VAR[BillboardPlot]</label>
				<textcolor>$VAR[White]</textcolor>
			</control>
			<include>Flags</include>
			<control type="label">
				<left>50</left>
				<top>500</top>
				<width>90%</width>
				<height>70</height>
				<font>Tile</font>
				<align>left</align>
				<scroll>true</scroll>
				<textcolor>$VAR[SecondaryColor]</textcolor>
				<label>Runtime</label>
			</control>
			<control type="label">
				<left>200</left>
				<top>500</top>
				<width>90%</width>
				<height>70</height>
				<font>Tile</font>
				<align>left</align>
				<scroll>true</scroll>
				<textcolor>$VAR[White]</textcolor>
				<label>$INFO[ListItem.Duration]</label>
			</control>

			<control type="label">
				<left>50</left>
				<top>540</top>
				<width>90%</width>
				<height>70</height>
				<font>Tile</font>
				<align>left</align>
				<scroll>true</scroll>
				<textcolor>$VAR[SecondaryColor]</textcolor>
				<label>Premiered</label>
			</control>
			<control type="label">
				<left>200</left>
				<top>540</top>
				<width>90%</width>
				<height>70</height>
				<font>Tile</font>
				<align>left</align>
				<scroll>true</scroll>
				<textcolor>$VAR[White]</textcolor>
				<label>$INFO[ListItem.Premiered]</label>
			</control>
		</control>

		<control type="group">
			<visible>Control.IsVisible(531)</visible>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="-1000" center="auto" tween="Cubic" easing="in" time="500"/>
				<!--><effect type="fade" start="0" end="100" time="200"/><!-->
			</animation>
			<animation type="Conditional" condition="Player.HasVideo">
				<effect type="slide" start="0" end="96,150" time="500" tween="cubic" easing="inout" />
				<effect type="zoom" start="100" end="90" time="500" tween="cubic" easing="inout" />
			</animation>
			<animation condition="![Control.HasFocus(531) | Control.HasFocus(60) | Control.HasFocus(3000) | Control.HasFocus(9051)]" effect="slide" center="auto" start="0" end="0,50" time="200">Conditional</animation>

			<control type="label">
				<centerleft>50%</centerleft>
				<centertop>57%</centertop>
				<width>100%</width>
				<height>70</height>
				<font>Med60</font>
				<align>center</align>
				<scroll>true</scroll>
				<textcolor>$VAR[TextColor]</textcolor>
				<label>$VAR[ListLabelNF]</label>
				<visible>Control.IsVisible(531) + Player.HasVideo</visible> 
			</control>

			<!-- List -->
			<control type="fixedlist" id="531">
				<centerleft>50%</centerleft>
				<width>120%</width>
				<centertop>80%</centertop>
				<height>35%</height>
				<onleft>Back</onleft>
				<onright>521</onright>
				<onup condition="Player.HasVideo">9050</onup>
				<ondown condition="Player.HasAudio">9051</ondown>
				<ondown>60</ondown>
				<ondown>3000</ondown>
				<pagecontrol>60</pagecontrol>
				<focusposition>1</focusposition>
				<movement>-1</movement>
				<preloaditems>2</preloaditems>
				<orientation>horizontal</orientation>
				<viewtype label="31530">list</viewtype>
				<scrolltime tween="sine" easing="inout">360</scrolltime>
				<visible>[String.Contains(Container.Content,movies) | String.Contains(Container.Content,tvshows)  | String.Contains(Container.Content,seasons) | String.Contains(Container.Content,actors) | String.Contains(Container.Content,directors)] + !String.Contains(Container.FolderPath,plugin://plugin.video.netflix)</visible>
				<itemlayout width="220" height="340">
					<control type="image">
						<width>220</width>
						<height>330</height>
						<aspectratio>scale</aspectratio>
						<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
					</control>
					<control type="image">
						<width>220</width>
						<height>330</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>220</width>
						<height>330</height>
						<texture colordiffuse="$VAR[DiffuseColor]">views/white_100.png</texture>
					</control>
					<include>WatchedIndicator</include>
				</itemlayout>
				<focusedlayout width="220" height="340">
					<control type="group">
						<animation center="auto" condition="Control.HasFocus(531)" easing="inout" effect="zoom" end="110" start="100" time="300" tween="sine">Focus</animation>
						<control type="image">
							<width>220</width>
							<height>330</height>
							<aspectratio>scale</aspectratio>
							<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
						</control>
						<control type="image">
							<width>220</width>
							<height>330</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
						</control>
						<control type="image">
							<width>220</width>
							<height>330</height>
							<texture colordiffuse="$VAR[DiffuseColor]">views/white_100.png</texture>
							<animation center="auto" condition="Control.HasFocus(531)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(530)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
						</control>
						<include>WatchedIndicator</include>
						<control type="image">
							<width>220</width>
							<height>330</height>
							<texture colordiffuse="$VAR[TextColor]" border="11,43,43,11">$VAR[BorderImage]</texture>
							<animation center="auto" condition="Control.HasFocus(531)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(531)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">UnFocus</animation>
							<visible>!Control.HasFocus(60) + !Control.HasFocus(3000) + !SubString(ListItem.Icon,default)</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>