	<!-- Fullscreen dimensions -->
	<include name="FullscreenDimensions">
		<left>0</left>
		<top>0</top>
		<width>100.1%</width>
		<height>100%</height>
	</include>
	<!-- Window overlay image -->
	<include name="SimpleWindowBackground">
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="$VAR[BackgroundColor]">color_white.png</texture>
		</control>
	</include>
	<include name="DialogBackgroundImage">
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="$VAR[BackgroundColor]">color_white.png</texture>
		</control>
	</include>
	<include name="WindowBackgroundImage">
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="$VAR[Black]">views/white_100.png</texture>
		</control>
		<control type="group">
			<animation type="Conditional" condition="Window.IsActive(contextmenu)">
				<effect type="zoom" center="auto" start="100" end="95" time="200" tween="cubic" easing="out"/>
			</animation>
			<control type="image">
				<include>FullscreenDimensions</include>
				<texture>$INFO[Skin.String(backgroundimage)]</texture>
			</control>
			<control type="image">
				<include>FullscreenDimensions</include>
				<texture colordiffuse="$VAR[Fade]">views/white_100.png</texture>
			</control>
		</control>
	</include>
	<!-- Fullscreen Video -->
	<include name="WindowBackgroundVideo">
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="$VAR[Black]">color_white.png</texture>
			<visible>Player.HasVideo | Player.HasGame</visible>	
		</control>
		<control type="videowindow">
			<include>FullscreenDimensions</include>
		</control>
		<control type="gamewindow">
			<include>FullscreenDimensions</include>
			<videofilter>$INFO[ListItem.Property(game.videofilter)]</videofilter>
			<stretchmode>$INFO[ListItem.Property(game.stretchmode)]</stretchmode>
			<rotation>$INFO[ListItem.Property(game.videorotation)]</rotation>
			<visible></visible>
		</control>
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="$VAR[Black]">views/white_50.png</texture>		
		</control>
	</include>
	<!-- Logo -->
	<include name="Logo">
		<control type="button">
			<centerright>100</centerright>
			<top>25</top>
			<width>80</width>
			<height>80</height>
			<label> </label>
			<onclick>Dialog.Close(contextmenu)</onclick>
			<onclick>Dialog.Close(all,true)</onclick>
			<onclick>ActivateWindow(home)</onclick>
			<texturefocus colordiffuse="$VAR[White]">xb1.png</texturefocus>
			<texturenofocus colordiffuse="$VAR[White]">xb1.png</texturenofocus>
		</control>
	</include>
	<!-- Menu fade background image -->
	<include name="MenuFadeBackgroundImage">
		<control type="image">
			<include>WindowFadeAnimation</include>
			<include>FullscreenDimensions</include>
			<texture colordiffuse="$VAR[BackgroundColor]">views/white_50.png</texture>
		</control>
	</include>
	<!-- Options background image -->
	<include name="OptionsBackgroundImage">
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture border="20">dialogs/OptionsBackground.png</texture>
		</control>
	</include>
	<!-- Fanart -->
	<include name="Fanart">
		<control type="group">			
			<control type="image">
				<include>FullscreenDimensions</include>
				<fadetime>400</fadetime>
				<texture fallback="views/white_0.png" background="true">$VAR[Fanart]</texture>
				<visible>![Window.IsActive(music) + Control.IsVisible(521)]</visible>
			</control>
		</control>
	</include>
	<!-- Clock -->
	<include name="Clock">
		<control type="grouplist">
			<right>20</right>
			<bottom>10</bottom>
			<width>400</width>
			<height>60</height>
			<align>right</align>
			<itemgap>0</itemgap>
			<orientation>horizontal</orientation>
			<include>HomeClockAnimation</include>
			<control type="label">
				<width>auto</width>
				<height>59</height>
				<font>Med60</font>
				<align>right</align>
				<textcolor>$VAR[SecondaryColor]</textcolor>
				<label>$INFO[System.Time(hh)]</label>
			</control>
			<control type="label">
				<width>auto</width>
				<height>69</height>
				<font>Thin48</font>
				<align>right</align>
				<textcolor>$VAR[White]</textcolor>
				<label>$INFO[System.Time(mm)]</label>
			</control>
		</control>
	</include>
	<include name="Clock2">
		<control type="grouplist">
			<right>20</right>
			<bottom>10</bottom>
			<width>400</width>
			<height>60</height>
			<align>right</align>
			<itemgap>0</itemgap>
			<orientation>horizontal</orientation>
			<include>HomeClockAnimation</include>
			<control type="label">
				<width>auto</width>
				<height>59</height>
				<font>Med60</font>
				<align>right</align>
				<textcolor>$VAR[BackgroundColor]</textcolor>
				<label>$INFO[System.Time(hh)]</label>
			</control>
			<control type="label">
				<width>auto</width>
				<height>69</height>
				<font>Thin48</font>
				<align>right</align>
				<textcolor>$VAR[White]</textcolor>
				<label>$INFO[System.Time(mm)]</label>
			</control>
		</control>
	</include>
	<!--  Watched Indicator -->
	<include name="WatchedIndicator">
		<control type="image">
			<right>0</right>
			<width>50</width>
			<height>50</height>
			<texture>views/watched_indicator.png</texture>
			<visible>String.Contains(ListItem.Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="image">
			<right>0</right>
			<width>50</width>
			<height>50</height>
			<texture colordiffuse="$VAR[BackgroundColor]">views/watched_indicator_back.png</texture>
			<visible>String.Contains(ListItem.Overlay,OverlayWatched.png)</visible>
		</control>
	</include>
	<include name="WatchedIndicator2">
		<control type="image">
			<top>20</top>
			<right>0</right>
			<width>50</width>
			<height>50</height>
			<texture>views/watched_indicator.png</texture>
			<visible>String.Contains(ListItem.Overlay,OverlayWatched.png)</visible>
		</control>
		<control type="image">
			<top>20</top>
			<right>0</right>
			<width>50</width>
			<height>50</height>
			<texture colordiffuse="black">views/watched_indicator_back.png</texture>
			<visible>String.Contains(ListItem.Overlay,OverlayWatched.png)</visible>
		</control>
	</include>
	<!--  Selected -->
	<include name="BorderSelected">
		<param name="type"/>
		<definition>
			<control type="image">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>60</width>
				<height>60</height>
				<texture colordiffuse="$VAR[White]">views/check.png</texture>
				<visible>String.IsEqual(System.CurrentControl,Skin.String($PARAM[type]))</visible>
			</control>
		</definition>
	</include>

	<include name="MediaInfoDiffuse">
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="$VAR[SecondaryColor]">views/white_90.png</texture>
		</control>
	</include>
	<include name="MediaInfoWidth860">
		<width>860</width>
	</include>
	<include name="MediaInfoWidth738">
		<width>738</width>
	</include>
	<include name="Flags">
		<!-- Studio Flag -->
		<control type="image">
			<left>50</left>
			<top>420</top>
			<width>120</width>
			<height>80</height>
			<aspectratio>keep</aspectratio>
			<texture colordiffuse="$VAR[White]" fallback="flags/default_studio.png">$INFO[ListItem.Studio,flags/studios/,.png]</texture>
			<visible>!SubString(ListItem.Icon,Default) + !Container.Content(artists)</visible>
		</control>
		<!-- MPAA Rating Flag -->
		<control type="image">
			<left>200</left>
			<top>420</top>
			<width>120</width>
			<height>80</height>
			<aspectratio>keep</aspectratio>
			<texture colordiffuse="$VAR[White]" fallback="flags/default_rating.png">$VAR[Info_Certificate]</texture>
			<visible>!SubString(ListItem.Icon,Default) + !Container.Content(artists)</visible>
		</control>
	</include>
	<!-- Hidden control -->
	<include name="HiddenControl">
		<left>-100</left>
		<top>-100</top>
		<width>1</width>
		<height>1</height>
		<label></label>
		<font>-</font>
		<texture>-</texture>
		<texturefocus>-</texturefocus>
		<texturenofocus>-</texturenofocus>
		<alttexturenofocus>-</alttexturenofocus>
		<alttexturefocus>-</alttexturefocus>
		<textureradiofocus>-</textureradiofocus>
		<textureradionofocus>-</textureradionofocus>
	</include>
	<!-- Dialog Button -->
	<include name="DialogButton">
		<width>auto</width>
		<height>100</height>
		<font>Font-Condensed-S34</font>
		<align>left</align>
		<textcolor>white</textcolor>
		<focusedcolor>white</focusedcolor>
		<disabledcolor>FF484848</disabledcolor>
		<texturefocus colordiffuse="$VAR[SecondaryColor]" border="20">kb/key-fo.png</texturefocus>
		<texturenofocus border="20">kb/key-nf.png</texturenofocus>
		<textoffsetx>25</textoffsetx>
		<textoffsety>55</textoffsety>
	</include>
	<!-- Settings Button -->
	<include name="SettingsButton">
		<width>auto</width>
		<height>100</height>
		<font>Font-Condensed-S34</font>
		<align>left</align>
		<textcolor>$VAR[Black]</textcolor>
		<focusedcolor>$VAR[White]</focusedcolor>
		<disabledcolor>FF484848</disabledcolor>
		<texturefocus colordiffuse="$VAR[SecondaryColor]">color_white.png</texturefocus>
		<texturenofocus colordiffuse="$VAR[White]">color_white.png</texturenofocus>
		<textoffsetx>25</textoffsetx>
		<textoffsety>55</textoffsety>
	</include>
	<!-- Conq -->
	<!-- Time -->
	<include name="Time">
		<control type="button">
			<left>120</left>
			<top>110</top>
			<width>1680</width>
			<height>33</height>
			<aligny>top</aligny>
			<label>[COLOR TextColor1]$VAR[HeadingLabel][/COLOR]</label>
			<label2>$INFO[System.Time]</label2>
			<font>Font33</font>
			<textcolor>$VAR[UnFocusedColor]</textcolor>
			<animation type="WindowOpen" condition="Window.Previous(startup)">
				<effect type="fade" start="50" end="100" time="200" tween="cubic" easing="out"/>
			</animation>
		</control>
	</include>
	<!-- Options buttons -->
	<include name="OptionButtons">
		<width>480</width>
		<height>54</height>
		<font>Font48</font>
		<textcolor>$VAR[TextColor]</textcolor>
		<focusedcolor>$VAR[TextColor]</focusedcolor>
	</include>
	<!-- Keyboard buttons -->
	<include name="KeyboardButtons">
		<width>114</width>
		<height>74</height>
		<font>Font-Condensed-S32</font>
		<align>center</align>
		<aligny>top</aligny>
		<texturefocus colordiffuse="$VAR[SecondaryColor]" border="20">kb/key-fo.png</texturefocus>
		<texturenofocus border="20">kb/key-nf.png</texturenofocus>
		<textoffsetx>10</textoffsetx>
		<textoffsety>23</textoffsety>
	</include>
	<include name="KeyboardButtons2">
		<font>Font-Condensed-S32</font>
		<align>center</align>
		<aligny>top</aligny>
		<texturefocus colordiffuse="$VAR[SecondaryColor]" border="20">kb/key-fo.png</texturefocus>
		<texturenofocus border="20">kb/key-nf.png</texturenofocus>
		<textoffsetx>10</textoffsetx>
		<textoffsety>23</textoffsety>
	</include>
	<!-- OSD Play buttons -->
	<include name="OSDPlayStopButtons">
		<control type="togglebutton" id="1">
			<width>60</width>
			<height>60</height>
			<label>  </label>
			<texturefocus colordiffuse="$VAR[White]">osd/OSDPauseFO.png</texturefocus>
			<texturenofocus colordiffuse="$VAR[White]">osd/OSDPauseNF.png</texturenofocus>
			<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
			<alttexturefocus colordiffuse="$VAR[White]">osd/OSDPlayFO.png</alttexturefocus>
			<alttexturenofocus colordiffuse="$VAR[White]">osd/OSDPlayNF.png</alttexturenofocus>
			<onclick>PlayerControl(Play)</onclick>
		</control>
		<control type="button" id="2">
			<width>60</width>
			<height>60</height>
			<label>  </label>
			<texturefocus colordiffuse="$VAR[White]">osd/OSDStopFO.png</texturefocus>
			<texturenofocus colordiffuse="$VAR[White]">osd/OSDStopNF.png</texturenofocus>
			<onclick>PlayerControl(Stop)</onclick>
		</control>
	</include>
	<!-- OSD Stop buttons -->
	<include name="OSDStopButton">
		<control type="button" id="1">
			<width>60</width>
			<height>60</height>
			<label>  </label>
			<texturefocus colordiffuse="$VAR[White]">osd/OSDStopFO.png</texturefocus>
			<texturenofocus colordiffuse="$VAR[White]">osd/OSDStopNF.png</texturenofocus>
			<onclick>PlayerControl(Stop)</onclick>
		</control>
	</include>
	<!-- Item count -->
	<include name="ItemCount">
		<control type="grouplist">
			<right>120</right>
			<bottom>110</bottom>
			<width>800</width>
			<height>44</height>
			<itemgap>6</itemgap>
			<align>right</align>
			<orientation>horizontal</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<visible>IntegerGreaterThan(Container.NumItems,0)</visible>
			<control type="label">
				<top>3</top>
				<width>auto</width>
				<height>44</height>
				<align>right</align>
				<label>$INFO[Container.NumItems]</label>
				<font>Font25</font>
				<textcolor>$VAR[UnFocusedColor]</textcolor>
			</control>
			<control type="label">
				<width>auto</width>
				<height>44</height>
				<align>right</align>
				<label>$VAR[ContentType]</label>
				<font>Font33</font>
				<textcolor>$VAR[UnFocusedColor]</textcolor>
			</control>
		</control>
	</include>
	<!-- ScrollBars -->
	<include name="ScrollBars">
		<!-- Scrollbar -->
		<control type="scrollbar" id="60">
			<right>0</right>
			<width>10</width>
			<height>100%</height>
			<onleft>50</onleft>
			<onright>3000</onright>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<texturesliderbackground colordiffuse="$VAR[UnFocusedColor]">views/white_50.png</texturesliderbackground>
			<texturesliderbar colordiffuse="$VAR[BackgroundColor]">views/white_70.png</texturesliderbar>
			<texturesliderbarfocus colordiffuse="$VAR[BackgroundColor]">views/white_100.png</texturesliderbarfocus>
			<textureslidernib>-</textureslidernib>
			<textureslidernibfocus>-</textureslidernibfocus>
			<visible>Control.IsVisible(50) | Control.IsVisible(52) | Control.IsVisible(530) | Control.IsVisible(533)</visible>
			<include>ScrollBarAnimation</include>
		</control>

		<control type="scrollbar" id="60">
			<bottom>0</bottom>
			<width>1920</width>
			<height>10</height>
			<onup>50</onup>
			<ondown>3000</ondown>
			<showonepage>true</showonepage>
			<orientation>horizontal</orientation>
			<texturesliderbackground colordiffuse="$VAR[UnFocusedColor]">views/white_50.png</texturesliderbackground>
			<texturesliderbar colordiffuse="$VAR[BackgroundColor]">views/white_70.png</texturesliderbar>
			<texturesliderbarfocus colordiffuse="$VAR[BackgroundColor]">views/white_100.png</texturesliderbarfocus>
			<textureslidernib>-</textureslidernib>
			<textureslidernibfocus>-</textureslidernibfocus>
			<visible>![Control.IsVisible(50) | Control.IsVisible(51) | Control.IsVisible(52) | Control.IsVisible(530) | Control.IsVisible(533)]</visible>
			<include>ScrollBarAnimation</include>
		</control>
	</include>

	<!-- PlayingWindows -->
	<include name="NowPlayingWindow">
		<control type="group">
			<visible>Player.HasVideo</visible>
			<animation type="Conditional" condition="Control.HasFocus(9050)">
				<effect type="zoom" start="100" end="110" center="auto" time="500" tween="cubic" easing="inout" />
				<effect type="slide" start="0" end="0,50" center="auto" time="500" tween="cubic" easing="inout" />
			</animation>
			<animation type="Conditional" condition="Control.HasFocus(9050) + Control.IsVisible(530)">
				<effect type="zoom" start="100" end="110" center="auto" time="500" tween="cubic" easing="inout" />
				<effect type="slide" start="0" end="0,1050" delay="100" center="auto" time="500" tween="cubic" easing="inout" />
			</animation>
			<animation type="Conditional" condition="Control.IsVisible(530)">
				<effect type="slide" end="0,-1000" center="auto" time="0" tween="cubic" easing="inout" />
			</animation>
			<control type="list" id="9050">
				<description>Control list</description>
				<height>2</height>
				<width>2</width>
				<onleft condition="Control.IsVisible(50)">3000</onleft>
				<onleft condition="Control.IsVisible(51)">3000</onleft>
				<onleft>noop</onleft>
				<onup>noop</onup>
				<ondown condition="Control.IsVisible(500)">500</ondown>
				<ondown condition="Control.IsVisible(510)">510</ondown>
				<ondown condition="Control.IsVisible(501)">501</ondown>
				<ondown condition="Control.IsVisible(520)">520</ondown>
				<ondown condition="Control.IsVisible(521)">521</ondown>
				<ondown condition="Control.IsVisible(522)">522</ondown>
				<ondown condition="Control.IsVisible(523)">523</ondown>
				<ondown condition="Control.IsVisible(530)">530</ondown>
				<ondown condition="Control.IsVisible(531)">531</ondown>
				<onright condition="Control.IsVisible(533)">533</onright>
				<ondown condition="Control.IsVisible(535)">535</ondown>
				<ondown condition="Control.IsVisible(50)">50</ondown>
				<ondown condition="Control.IsVisible(52)">52</ondown>
				<orientation>vertical</orientation>
				<scrolltime>0</scrolltime>
				<pagecontrol>2</pagecontrol>
				<viewtype>list</viewtype>
				<defaultcontrol>1</defaultcontrol>
				<content>
					<item id="1">
						<label>Fullscreen</label>
						<onclick>Fullscreen</onclick>
					</item>
				</content>
			</control>
			<control type="group">
				<visible>!Control.IsVisible(533)</visible>
				<control type="image">	
					<top>10</top>
					<centerleft>50%</centerleft>
					<width>1140</width>
					<height>630</height>
					<texture colordiffuse="$VAR[Black]">color_white.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="videowindow">
					<top>10</top>
					<centerleft>50%</centerleft>
					<width>1140</width>
					<height>630</height>
					<aspectratio>scale</aspectratio>
					<visible>Player.HasVideo</visible>
					<onclick>Fullscreen</onclick>							
				</control>
			</control>
		</control>
	</include>

	<include name="PlayingMusicWindow">
		<control type="group">
			<visible>Player.HasAudio</visible>
			<animation type="WindowOpen">
				<effect type="slide" start="0,600" end="0,0" center="auto" tween="Cubic" easing="inout" delay="100" time="500"/>
			</animation>
			<!--> Background <!-->
			<control type="image">
				<bottom>0</bottom>
				<width>100%</width>
				<height>120</height>
				<aspectratio>stretch</aspectratio>
				<texture colordiffuse="$VAR[MaterialColorDark]">color_white.png</texture>
			</control>
			<!--> Vignette <!-->
			<control type="image">
				<bottom>120</bottom>
				<width>100%</width>
				<height>50%</height>
				<aspectratio>stretch</aspectratio>
				<texture colordiffuse="70000000">views/vignette.png</texture>
			</control>
			<!--> Progress <!-->
			<control type="progress">
				<left>0</left>
				<bottom>120</bottom>
				<width>100%</width>
				<height>5</height>
				<info>Player.Progress</info>
				<texturebg border="2">osd/OSDProgressBack.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="2" colordiffuse="$VAR[SecondaryColor]">osd/OSDProgressBar.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<!--> Volume <!-->
			<control type="image">
				<right>400</right>
				<width>50</width>
				<height>120</height>
				<bottom>0</bottom>
				<aspectratio>keep</aspectratio>
				<texture colordiffuse="$VAR[UnFocusedColor]">osd/now/volume.png</texture>
			</control>
			<control type="progress">
				<right>65</right>
				<bottom>55</bottom>
				<width>330</width>
				<height>10</height>
				<info>player.volume</info>
