<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_525_RetroArch">
		<control type="group">
			<visible>Control.IsVisible(525)</visible>
			<animation type="Visible">
				<effect type="slide" start="0,1000" end="0" center="auto" tween="Cubic" easing="out" time="500"/>
			</animation>

			<!--> List -->
			<control type="group">
				<control type="fixedlist" id="525">
					<centertop>55%</centertop>
					<left>10</left>
					<width>110%</width>
					<height>80%</height>
					<onleft>noop</onleft>
					<onright>noop</onright>					
					<onup>3000</onup>
					<ondown>5125</ondown>
					<preloaditems>2</preloaditems>
					<focusposition>1</focusposition>
					<movement>0</movement>
					<orientation>horizontal</orientation>
					<viewtype>icons</viewtype>
					<scrolltime tween="sine" easing="inout">400</scrolltime>
					<visible>String.Contains(System.CurrentWindow,Game)|String.Contains(System.CurrentWindow,Dialog)|Window.IsVisible(DialogMediaSource.xml)</visible>
					<animation type="WindowOpen">
						<effect type="slide" start="-1000" end="0,0" center="auto" tween="Cubic" easing="inout" time="500"/>
					</animation>
					<animation type="WindowClose">
						<effect type="slide" start="0" end="-1000" center="auto" tween="Cubic" easing="in" time="500"/>
					</animation>
					<itemlayout width="210" height="450">
						<control type="group">
							<control type="image">
								<width>200</width>
								<height>200</height>
								<aspectratio>scale</aspectratio>
								<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
							</control>
							<control type="image">
								<width>200</width>
								<height>200</height>
								<aspectratio>scale</aspectratio>
								<texture>$INFO[ListItem.Icon]</texture>
							</control>
							<control type="image">
								<width>200</width>
								<height>200</height>
								<aspectratio>scale</aspectratio>
								<texture>$VAR[ConsoleLogo]</texture>
							</control>
							<control type="image">
								<width>200</width>
								<height>200</height>
								<texture colordiffuse="$VAR[DiffuseColor]">views/white_100.png</texture>
							</control>
						</control>
					</itemlayout>
					<focusedlayout width="210" height="450">
						<control type="group">
							<control type="image">
								<width>200</width>
								<height>200</height>
								<aspectratio>scale</aspectratio>
								<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
							</control>
							<control type="image">
								<width>200</width>
								<height>200</height>
								<aspectratio>scale</aspectratio>
								<texture>$INFO[ListItem.Icon]</texture>
							</control>
							<control type="image">
								<width>200</width>
								<height>200</height>
								<aspectratio>scale</aspectratio>
								<texture>$VAR[ConsoleLogo]</texture>
							</control>
							<control type="image">
								<width>200</width>
								<height>200</height>
								<texture colordiffuse="$VAR[DiffuseColor]">views/white_100.png</texture>
								<visible>!Control.HasFocus(525)</visible>
							</control>
						</control>
					</focusedlayout>
					<!--><content>
						<item>					
							<label>Steam</label>
							<label2>plugin://plugin.program.steam.library/all</label2>
							<icon>special://skin/extras/games/steam.png</icon>
							<visible>System.HasAddon(plugin.program.steam.library)</visible>
						</item>
					</content><!-->
				</control>
				<control type="fixedlist" id="5125">
					<centertop>75%</centertop>
					<left>220</left>
					<width>100%</width>
					<height>80%</height>
					<onleft>Control.Move(525,-1)</onleft>
					<onright>Control.Move(525,1)</onright>					
					<onup>525</onup>
					<ondown>noop</ondown>
					<focusposition>0</focusposition>
					<movement>0</movement>
					<orientation>vertical</orientation>
					<viewtype>list</viewtype>
					<scrolltime tween="sine" easing="inout">100</scrolltime>
					<animation type="WindowOpen">
						<effect type="slide" start="0,1000" end="0,0" delay="200" center="auto" tween="Cubic" easing="inout" time="500"/>
					</animation>
					<animation type="WindowClose">
						<effect type="slide" start="0" end="0,1000" center="auto" tween="Cubic" easing="in" time="500"/>
					</animation>
					<itemlayout width="450" height="210">
						<control type="group">
							<control type="image">
								<width>200</width>
								<height>200</height>
								<aspectratio>scale</aspectratio>
								<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
							</control>
							<control type="image">
								<width>200</width>
								<height>200</height>
								<aspectratio>scale</aspectratio>
								<texture>$INFO[ListItem.Icon]</texture>
							</control>
							<control type="image">
								<width>200</width>
								<height>200</height>
								<aspectratio>scale</aspectratio>
								<texture>$VAR[ConsoleLogo]</texture>
							</control>
							<control type="label">
								<left>220</left>
								<width>1000</width>
								<height>200</height>
								<aligny>center</aligny>
								<label>$INFO[ListItem.label]</label>
							</control>
							<control type="image">
								<width>200</width>
								<height>200</height>
								<texture colordiffuse="$VAR[DiffuseColor]">views/white_100.png</texture>
							</control>
						</control>
					</itemlayout>
					<focusedlayout width="450" height="210">
						<control type="group">
							<control type="image">
								<width>200</width>
								<height>200</height>
								<aspectratio>scale</aspectratio>
								<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
							</control>
							<control type="image">
								<width>200</width>
								<height>200</height>
								<aspectratio>scale</aspectratio>
								<texture>$INFO[ListItem.Icon]</texture>
							</control>
							<control type="label">
								<left>220</left>
								<width>1000</width>
								<height>200</height>
								<aligny>center</aligny>
								<label>$INFO[ListItem.label]</label>
							</control>
							<control type="image">
								<width>200</width>
								<height>200</height>
								<aspectratio>scale</aspectratio>
								<texture>$VAR[ConsoleLogo]</texture>					
							</control>
							<control type="image">
								<width>200</width>
								<height>200</height>
								<texture colordiffuse="$VAR[DiffuseColor]">views/white_100.png</texture>
								<visible>!Control.HasFocus(5125)</visible>
							</control>
						</control>
					</focusedlayout>
					<content>$INFO[Container(525).ListItem.FolderPath]</content>
					<content>$INFO[Container(525).ListItem.label2]</content>
				</control>
			</control>

			<control type="label">
				<left>50</left>
				<top>75</top>
				<width>100%</width>
				<height>70</height>
				<font>Home</font>
				<align>Left</align>
				<texturefocus colordiffuse="$VAR[SecondaryColor]">color_white.png</texturefocus>
				<texturenofocus colordiffuse="$VAR[SecondaryColor]">color_white.png</texturenofocus>
				<textcolor>$VAR[White]</textcolor>
				<label>$VAR[ConsoleName]</label>
				<animation type="Unfocus">
					<effect type="fade" start="100" end="0" center="auto" tween="sine"  easing="inout" time="100"/>
				</animation>
			</control>
		</control>
	</include>
</includes>