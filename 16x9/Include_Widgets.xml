<includes>

	<include name="WidgetGame">
		<param name="listid"/>
		<param name="widgetid"/>
		<definition>
			<visible>!String.IsEmpty(Container(100).ListItemNoWrap($PARAM[widgetid]).Property(path))</visible>
		<!--> Landscape <!-->
			<itemlayout height="228" width="400" condition="String.Contains(Container(100).ListItemNoWrap($PARAM[widgetid]).Property(widgetLayout),Landscape)">
				<control type="group">
					<left>20</left>
					<control type="image">
						<width>400</width>
						<height>223</height>
						<texture colordiffuse="$VAR[SecondaryColor]">color_white.png</texture>
					</control>
					<control type="image">
						<width>400</width>
						<height>223</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="label">
						<left>20</left>
						<bottom>20</bottom>
						<height>30</height>
						<width>360</width>		
						<label>$INFO[ListItem.Label]</label>
						<align>left</align>
						<aligny>center</aligny>
						<font>Tile</font>
						<textcolor>$VAR[TextColor]</textcolor>
					</control>
				</control>
			</itemlayout>
			<focusedlayout height="228" width="400" condition="String.Contains(Container(100).ListItemNoWrap($PARAM[widgetid]).Property(widgetLayout),Landscape)">
				<control type="group">
					<left>20</left>
					<animation effect="zoom" center="auto" start="100" end="100" time="200">Focus</animation>
					<animation effect="zoom" center="auto" start="100" end="100" time="200">UnFocus</animation>
					<control type="image">
						<width>400</width>
						<height>223</height>
						<texture colordiffuse="$VAR[SecondaryColor]">color_white.png</texture>
					</control>
					<control type="image">
						<width>400</width>
						<height>223</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="group">
						<visible>Control.HasFocus($PARAM[listid])</visible>
						<include>SelectionAnimation</include>
						<control type="image">
							<bottom>0</bottom>
							<width>400</width>
							<height>60</height>
							<texture colordiffuse="$VAR[DiffuseColor]">color_white.png</texture>
						</control>
					</control>
					<control type="label">
						<left>20</left>
						<bottom>20</bottom>
						<height>30</height>
						<width>360</width>		
						<label>$INFO[ListItem.Label]</label>
						<align>left</align>
						<aligny>center</aligny>
						<font>Tile</font>
						<textcolor>$VAR[TextColor]</textcolor>
						<scroll>true</scroll>
					</control>
					<control type="image">
						<width>400</width>
						<height>223</height>
						<texture colordiffuse="$VAR[TextColor]" border="11,43,43,11">views/border.png</texture>
						<visible>Control.HasFocus($PARAM[listid])</visible>
					</control>
				</control>
			</focusedlayout>	
		<!--> Poster <!-->
			<itemlayout height="350" width="233" condition="String.Contains(Container(100).ListItemNoWrap($PARAM[widgetid]).Property(widgetLayout),Poster)">
				<control type="image">
					<width>233</width>
