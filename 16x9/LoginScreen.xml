<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- loginscreen -->
	<backgroundcolor>$VAR[BackgroundColor]</backgroundcolor>
	<defaultcontrol always="true">52</defaultcontrol>
	<controls>

		<control type="image">
			<width>100%</width>
			<height>100%</height>
			<aspectratio>scale</aspectratio>
			<texture>special://skin/extras/wallpapers/Logo 1.png</texture>
		</control>

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- View -->
			<control type="list" id="52">
				<centertop>50%</centertop>
				<centerleft>50%</centerleft>
				<width>1000</width>
				<height>50%</height>
				<onup>52</onup>
				<ondown>52</ondown>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<focusposition>3</focusposition>
				<viewtype label="535">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<animation effect="slide" start="0,1000" end="0" time="1000" tween="sine" easing="inout">WindowOpen</animation>
				<itemlayout width="1000" height="210">
					<control type="image">
						<height>200</height>
						<texture colordiffuse="$VAR[MaterialColor]" border="49">views/circle.png</texture>
					</control>
					<control type="image">
						<width>200</width>
						<height>200</height>
						<colordiffuse>$VAR[FocusedColor]</colordiffuse>
						<texture fallback="DefaultUser.png">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>230</left>
						<width>500</width>
						<height>180</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>Reg35</font>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
					</control>
					<control type="label">
						<left>230</left>
						<top>10</top>
						<width>500</width>
						<height>220</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>tile</font>
						<label>$INFO[ListItem.Label2]</label>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
					</control>
				</itemlayout>
				<focusedlayout width="1000" height="210">
					<control type="image">
						<height>200</height>
						<texture colordiffuse="$VAR[SecondaryColor]" border="49">views/circle.png</texture>
					</control>
					<control type="image">
						<width>200</width>
						<height>200</height>
						<colordiffuse>$VAR[FocusedColor]</colordiffuse>
						<texture fallback="DefaultUser.png">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>230</left>
						<width>500</width>
						<height>180</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>Reg35</font>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>$VAR[FocusedColor]</textcolor>
					</control>
					<control type="label">
						<left>230</left>
						<top>10</top>
						<width>500</width>
						<height>220</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>tile</font>
						<label>$INFO[ListItem.Label2]</label>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
					</control>
				</focusedlayout>
			</control>

		</control>

		<control type="image">
			<animation type="WindowOpen">
				<effect type="zoom" center="auto" start="100" end="2000" time="500" tween="sine"/>
				<effect type="fade" center="auto" start="100" end="0" time="500" tween="sine"/>
			</animation>
			<description>Loading</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>100%</width>
			<height>100%</height>
			<texture colordiffuse="$VAR[SecondaryColor]">Splash.png</texture>
		</control>

	</controls>
</window>