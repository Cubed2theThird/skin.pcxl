			<!-- View -->
			<control type="list" id="52">
				<centertop>50%</centertop>
				<centerleft>50%</centerleft>
				<width>50%</width>
				<height>500</height>
				<onup>52</onup>
				<ondown>52</ondown>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<focusposition>3</focusposition>
				<orientation>horizontal</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<animation effect="slide" start="0,1000" end="0" time="1000" tween="sine" easing="inout">WindowOpen</animation>
				<itemlayout width="410" height="460">
					<control type="image">
						<width>405</width>
						<height>405</height>
						<colordiffuse>$VAR[FocusedColor]</colordiffuse>
						<texture fallback="DefaultUser.png">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<bottom>0</bottom>
						<width>405</width>
						<height>20</height>
						<align>center</align>
						<font>tile</font>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
					</control>
					<control type="label">
						<bottom>-20</bottom>
						<width>405</width>
						<height>10</height>
						<align>center</align>
						<font>tile</font>
						<label>$INFO[ListItem.Label2]</label>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
					</control>
				</itemlayout>
				<focusedlayout width="410" height="460">
					<control type="image">
						<width>405</width>
						<height>405</height>
						<colordiffuse>$VAR[FocusedColor]</colordiffuse>
						<texture fallback="DefaultUser.png">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<bottom>0</bottom>
						<width>405</width>
						<height>20</height>
						<align>center</align>
						<font>tile</font>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>$VAR[FocusedColor]</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(52)">Conditional</animation>
					</control>
					<control type="label">
						<bottom>-20</bottom>
						<width>405</width>
						<height>10</height>
						<align>center</align>
						<font>tile</font>
						<label>$INFO[ListItem.Label2]</label>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(52)">Conditional</animation>
					</control>
				</focusedlayout>
			</control>

		</control>

		<control type="image">
			<animation type="WindowOpen">
				<effect type="zoom" center="auto" start="100" end="2000" time="500" tween="sine"/>
				<effect type="fade" center="auto" start="100" end="0" time="500" tween="sine"/>
			</animation>
			<description>Loading</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>100%</width>
			<height>100%</height>
			<texture colordiffuse="$VAR[SecondaryColor]">Splash.png</texture>
		</control>

	</controls>
</window>