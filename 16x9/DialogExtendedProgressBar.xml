<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- extendedprogressdialog -->
	<controls>
		<control type="group">
			<top>35</top>
			<animation effect="fade" start="100" end="0" time="0" condition="Window.IsActive(fullscreenvideo)|Window.IsActive(startup)|Window.IsActive(tvguide)">Conditional</animation>
			<animation effect="fade" start="0" end="100" time="200">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
			<!-- Progress -->
			<control type="progress" id="32">
				<top>65</top>
				<right>170</right>
				<width>500</width>
				<height>5</height>
				<texturebg colordiffuse="$VAR[BackgroundColor]">views/white_100.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<!-- Heading -->
			<control type="label" id="30">
				<top>-5</top>
				<right>170</right>
				<width>1000</width>
				<height>60</height>
				<font>Reg25</font>
				<align>right</align>
				<textcolor>$VAR[White]</textcolor>
			</control>
			<!-- Details -->
			<control type="label" id="31">
				<right>170</right>
				<top>20</top>
				<width>1000</width>
				<height>60</height>
				<font>Reg20</font>
				<align>right</align>
				<alignx>right</alignx>
				<textcolor>$VAR[White]</textcolor>
			</control>
		</control>
	</controls>
</window>