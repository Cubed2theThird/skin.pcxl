<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_523_ShowcaseSquareLarge">
		<control type="group">
			<visible>Control.IsVisible(523)</visible>
			<animation type="Visible">
				<effect type="slide" start="0,1000" end="0" center="auto" tween="Cubic" easing="out" time="500"/>
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="0,1000" center="auto" tween="Cubic" easing="in" time="500"/>
			</animation>

			<!--> List -->
			<control type="group">
				<animation type="Conditional" condition="Player.HasVideo">
					<effect type="slide" start="0" end="96,330" time="500" tween="cubic" easing="inout" />
					<effect type="zoom" start="100" end="90" time="500" tween="cubic" easing="inout" />
				</animation>
				<animation condition="![Control.HasFocus(523) | Control.HasFocus(60) | Control.HasFocus(3000) | Control.HasFocus(9051)]" effect="slide" center="auto" start="0" end="0,150" time="100">Conditional</animation>
				<control type="image">
					<centertop>50%</centertop>
					<centerleft>60%</centerleft>
					<width>480</width>
					<height>480</height>
					<aspectratio>scale</aspectratio>
					<animation condition="ListItem.IsPlaying" effect="rotate" center="auto" start="360" end="0" time="1000" loop="true">Conditional</animation>
					<animation type="Hidden">
						<effect type="slide" start="0" end="-160" center="auto" tween="sine"  easing="inout" time="600"/>
						<effect type="rotate" start="0" end="360" center="auto" tween="sine"  easing="inout" time="1000"/>
						<effect type="fade" start="100" end="0" center="auto" tween="sine"  easing="inout" time="400"/>
					</animation>
					<animation type="Visible">
						<effect type="slide" start="-160" end="0" center="auto" tween="sine"  easing="inout" time="600"/>
						<effect type="rotate" start="360" end="0" center="auto" tween="sine"  easing="inout" time="1000"/>
						<effect type="fade" start="0" end="100" center="auto" tween="sine"  easing="inout" time="400"/>
					</animation>
					<texture>views/discart.png</texture>
					<visible>![Container(523).HasFocus(0) + String.Contains(Container.Content,albums)]</visible>
				</control>

				<control type="wraplist" id="523">
					<centertop>50%</centertop>
					<centerleft>50%</centerleft>
					<width>480</width>
					<height>540</height>
					<onleft>Back</onleft>
					<onright>521</onright>
					<onup condition="Player.HasVideo">9050</onup>
					<ondown condition="Player.HasAudio">9051</ondown>
					<ondown>60</ondown>
					<ondown>3000</ondown>
					<pagecontrol>60</pagecontrol>
					<preloaditems>2</preloaditems>
					<focusposition>0</focusposition>
					<movement>-1</movement>
					<orientation>horizontal</orientation>
					<viewtype label="31521">list</viewtype>
					<scrolltime tween="sine" easing="inout">400</scrolltime>
					<visible>String.Contains(Container.Content,songs) | String.Contains(Container.Content,albums) | String.Contains(Container.FolderPath,androidapp://)</visible>
					<itemlayout width="0" height="450">
						<control type="group">
							<top>30</top>
							<control type="image">
								<width>480</width>
								<height>480</height>
								<aspectratio>scale</aspectratio>
								<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
							</control>
							<control type="image">
								<width>480</width>
								<height>480</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
						</control>
					</itemlayout>
					<focusedlayout width="480" height="450">
						<control type="group">
							<top>30</top>
							<control type="image">
								<width>480</width>
								<height>480</height>
								<aspectratio>scale</aspectratio>
								<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
							</control>
							<control type="image">
								<width>480</width>
								<height>480</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
						</control>				
					</focusedlayout>
				</control>

				<control type="label">
					<centertop>75%</centertop>
					<centerleft>50%</centerleft>
					<width>100%</width>
					<height>70</height>
					<font>tile</font>
					<align>center</align>
					<textcolor>$VAR[White]</textcolor>
					<label>$INFO[Container(523).ListItemNoWrap(0).Label]</label>
					<animation type="Unfocus">
						<effect type="fade" start="100" end="0" center="auto" tween="sine"  easing="inout" time="100"/>
					</animation>
				</control>

				<control type="image2">
					<centertop>50%</centertop>
					<centerleft>50%</centerleft>
					<width>545</width>
					<height>545</height>
					<texture colordiffuse="$VAR[SecondaryColor]" border="90">fo.png</texture>
				</control>

				<control type="image">
					<centertop>50%</centertop>
					<centerleft>50%</centerleft>
					<width>480</width>
					<height>480</height>
					<texture colordiffuse="$VAR[SecondaryColor]" border="11,43,43,11">$VAR[BorderImage]</texture>
				</control>

			</control>
		</control>
	</include>
</includes>