<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- movieinformation -->
	<defaultcontrol always="true">97</defaultcontrol>
	<onload condition="System.HasAddon(script.tvtunes)">RunScript(script.tvtunes,backend=True)</onload>
	<controls>
		<!-- Viewtype_All -->
		<control type="group">

			<control type="image">
				<width>500%</width>
				<height>500%</height>
				<texture colordiffuse="FF000000">color_white.png</texture>
			</control>
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="300" tween="sine" easing="out" />
				<effect type="zoom" center="auto" start="120" end="100" time="200" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="600" tween="sine" easing="in" />
				<effect type="zoom" center="auto" start="100" end="120" time="200" tween="cubic" easing="in" />
			</animation>
			<animation type="Conditional" condition="Control.HasFocus(50)">					
				<effect type="slide" start="0" end="-1600" time="500" delay="0" tween="sine" easing="inout" />
			</animation>

			<!-- Cast Button -->
			<control type="button" id="5">
				<include>HiddenControl</include>
			</control>

			<!-- Browse/Play Button -->
			<control type="togglebutton" id="8">
				<top>-300</top>
				<label>208</label>
				<altlabel>1024</altlabel>
				<usealttexture>Listitem.DBType(tvshow) | Listitem.DBType(season)</usealttexture>
			</control>

			<!-- Get Thumb Button -->
			<control type="button" id="10">
				<include>HiddenControl</include>
			</control>

			<!-- Artwork Downloader Button -->
			<control type="button" id="20">
				<include>HiddenControl</include>
				<onclick condition="Listitem.DBType(tvshow)">RunScript(script.artwork.downloader, mode=gui, mediatype=tvshow, dbid=$INFO[ListItem.DBID])</onclick>
				<onclick condition="Listitem.DBType(movie)">RunScript(script.artwork.downloader, mode=gui, mediatype=movie, dbid=$INFO[ListItem.DBID])</onclick>
			</control>

			<control type="group">
				<include>InfoDialogFadeAnimation</include>
				<control type="group">
					<width>100%</width>
					<control type="group">
						<animation effect="fade" start="0" end="100" time="200">Visible</animation>
						<visible>!String.Contains(Control.GetLabel(5),$LOCALIZE[207])</visible>
						<!-- Heading -->
						<control type="grouplist">
							<top>-100</top>
							<left>50</left>
							<height>210</height>
							<align>right</align>
							<orientation>vertical</orientation>
							<control type="textbox">
								<height max="210">auto</height>
								<font>Med60</font>
								<textcolor>$VAR[TextColor]</textcolor>
								<label>$VAR[InfoTitle]</label>
							</control>
						</control>
						<control type="image">
							<top>50</top>
							<width>640</width>
							<height>248</height>
							<aspectratio scalediffuse="false">keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<visible>Skin.HasSetting(LogosInfo) | Skin.HasSetting(LogosBoth)</visible>
						</control>

						<!-- Image -->
						<control type="image">
							<top>150</top>
							<left>50</left>
							<width>540</width>
							<height>810</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
						</control>

						<!-- Details -->
						<control type="group">
							<top>150</top>
							<left>640</left>
							<width>500</width>
							<!-- Star Rating -->
							<control type="image">
								<width>147</width>
								<height>24</height>
								<aspectratio>keep</aspectratio>
								<texture colordiffuse="$VAR[TextColor]">$VAR[StarRating]</texture>
								<visible>!Listitem.DBType(season)</visible>
							</control>
							<!-- Details Line 1 -->
							<control type="label">
								<top>50</top>
								<width>78%</width>
								<height>36</height>
								<font>Tile</font>
								<textcolor>$VAR[SecondaryColor]</textcolor>
								<label>Runtime:</label>
							</control>
							<control type="label">
								<top>50</top>
								<left>120</left>
								<width>78%</width>
								<height>36</height>
								<font>Tile</font>
								<textcolor>$VAR[TextColor]</textcolor>
								<label>$INFO[ListItem.Duration]</label>
							</control>
							<!-- Details Line 2 -->
							<control type="label">
								<top>90</top>
								<width>78%</width>
								<height>36</height>
								<font>Tile</font>
								<textcolor>$VAR[SecondaryColor]</textcolor>
								<label>Premiered:</label>
							</control>
							<control type="label">
								<top>90</top>
								<left>120</left>
								<width>78%</width>
								<height>36</height>
								<font>Tile</font>
								<textcolor>$VAR[TextColor]</textcolor>
								<label>$INFO[ListItem.Premiered]</label>
							</control>
							<!-- Details Line 3 -->
							<control type="label">
								<top>130</top>
								<width>78%</width>
								<height>36</height>
								<font>Tile</font>
								<textcolor>$VAR[SecondaryColor]</textcolor>
								<label>Studio:</label>
							</control>
							<control type="label">
								<top>130</top>
								<left>120</left>
								<height>36</height>
								<aligny>top</aligny>
								<font>Tile</font>
								<textcolor>$VAR[TextColor]</textcolor>
								<wrapmultiline>true</wrapmultiline>
								<label>$INFO[ListItem.Studio]</label>
							</control>
							<!-- Details Line 4 -->
							<control type="label">
								<top>170</top>
								<width>78%</width>
								<height>36</height>
								<font>Tile</font>
								<textcolor>$VAR[SecondaryColor]</textcolor>
								<label>Director(s):</label>
							</control>
							<control type="label">
								<top>170</top>
								<left>120</left>
								<height>36</height>
								<aligny>top</aligny>
								<font>Tile</font>
								<textcolor>$VAR[TextColor]</textcolor>
								<wrapmultiline>true</wrapmultiline>
								<label>$INFO[ListItem.Director]</label>
							</control>
							<!-- Plot -->
							<control type="textbox">
								<top>220</top>
								<height>700</height>
								<font>Light27</font>
								<label>$VAR[Plot]</label>
								<textcolor>$VAR[TextColor]</textcolor>
								<autoscroll delay="10000" time="2000" repeat="12000">True</autoscroll>
							</control>
						</control>
						<control type="grouplist">
							<bottom>0</bottom>
							<left>50</left>
							<height>109</height>
							<itemgap>100</itemgap>
							<orientation>horizontal</orientation>
							<usecontrolcoords>true</usecontrolcoords>
							<!-- Studio Flag -->
							<control type="image">
								<width>120</width>
								<height>80</height>
								<aspectratio>keep</aspectratio>
								<texture colordiffuse="$VAR[TextColor]" fallback="flags/default_studio.png">$INFO[ListItem.Studio,flags/studios/,.png]</texture>
								<visible>!String.IsEmpty(ListItem.Studio)</visible>
							</control>
							<!-- MPAA Rating Flag -->
							<control type="image">
								<width>120</width>
								<height>80</height>
								<aspectratio>keep</aspectratio>
								<texture colordiffuse="$VAR[TextColor]" fallback="flags/default_rating.png">$VAR[Info_Certificate]</texture>
								<visible>!String.IsEmpty(ListItem.MPAA)</visible>
							</control>
							<!-- Source Flag -->
							<control type="image">
								<width>120</width>
								<height>80</height>
								<aspectratio>keep</aspectratio>
								<texture colordiffuse="$VAR[TextColor]">$VAR[Video_Source]</texture>
							</control>
						</control>
					</control>
					<!-- Button grouplist -->
					<control type="grouplist">
						<top>150</top>
						<right>400</right>
						<width>300</width>
						<height>500</height>
						<itemgap>0</itemgap>
						<orientation>vertical</orientation>
						<onright>SendClick(5)</onright>
						<onright>SetFocus(50)</onright>
						<onup condition="String.Contains(Control.GetLabel(5),$LOCALIZE[207])">50</onup>
						<onup condition="!String.Contains(Control.GetLabel(5),$LOCALIZE[207])">Close</onup>
						<ondown>Close</ondown>
						<!-- Play/Browse Button -->
						<control type="button" id="97">
							<width>300</width>
							<include>DialogButton</include>
							<label>$INFO[Control.GetLabel(8)]</label>
							<onclick>SendClick(movieinformation,8)</onclick>
							<visible>Control.IsVisible(8)</visible>
						</control>
						<!-- Trailer Button -->
						<control type="button" id="11">
							<width>300</width>
							<include>DialogButton</include>
							<label>20410</label>
							<visible>!String.IsEmpty(ListItem.Trailer)</visible>
						</control>
						<!-- Refresh Button -->
						<control type="button" id="6">
							<width>300</width>
							<include>DialogButton</include>
							<label>184</label>
						</control>
						<!-- Art Button -->
						<control type="button" id="99">
							<width>300</width>
							<include>DialogButton</include>
							<label>31142</label>
							<onclick condition="System.HasAddon(script.toolbox) + System.HasAddon(script.artwork.downloader)">SetProperty(Dialog.NumItems,2)</onclick>
							<onclick condition="System.HasAddon(script.toolbox) + System.HasAddon(script.artwork.downloader)">SetProperty(Dialog.1.Label,Default Scraper)</onclick>
							<onclick condition="System.HasAddon(script.toolbox) + System.HasAddon(script.artwork.downloader)">SetProperty(Dialog.1.BuiltIn,SendClick(movieinformation,10))</onclick>
							<onclick condition="System.HasAddon(script.toolbox) + System.HasAddon(script.artwork.downloader)">SetProperty(Dialog.2.Label,Artwork Downloader)</onclick>
							<onclick condition="System.HasAddon(script.toolbox) + System.HasAddon(script.artwork.downloader) + Listitem.DBType(tvshow)">SetProperty(Dialog.2.BuiltIn,RunScript(script.artwork.downloader, mode=gui, mediatype=tvshow, dbid=$INFO[ListItem.DBID]))</onclick>
							<onclick condition="System.HasAddon(script.toolbox) + System.HasAddon(script.artwork.downloader) + Listitem.DBType(movie)">SetProperty(Dialog.2.BuiltIn,RunScript(script.artwork.downloader, mode=gui, mediatype=movie, dbid=$INFO[ListItem.DBID]))</onclick>
							<onclick condition="System.HasAddon(script.toolbox) + System.HasAddon(script.artwork.downloader)">RunScript(script.toolbox,info=selectdialog,header=Choose method)</onclick>
							<onclick condition="!System.HasAddon(script.toolbox) | !System.HasAddon(script.artwork.downloader)]">SendClick(movieinformation,10)</onclick>
						</control>
						<!-- Cast Button
						<control type="button" id="98">
							<width>300</width>
							<include>DialogButton</include>
							<label>206</label>
							<onclick>SendClick(5)</onclick>
							<onclick>SetFocus(50)</onclick>
						</control> -->
					</control>
				</control>
				<!-- Cast -->
				<control type="fixedlist" id="50">
					<left>1600</left>
					<top>270</top>
					<width>2180</width>
					<height>540</height>
					<onup>noop</onup>
					<ondown>98</ondown>
					<ondown>SendClick(5)</ondown>
					<onleft>SendClick(5)</onleft>
					<onright>noop</onright>
					<onback>9000</onback>
					<preloaditems>2</preloaditems>
					<focusposition>1</focusposition>
					<orientation>horizontal</orientation>
					<viewtype label="31520">list</viewtype>
					<scrolltime tween="sine" easing="inout">360</scrolltime>
					<animation effect="fade" start="0" end="100" time="200">Visible</animation>
					<itemlayout height="540" width="360">
						<control type="image">
							<width>360</width>
							<height>540</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
						</control>
						<control type="image">
							<width>360</width>
							<height>540</height>
							<texture colordiffuse="$VAR[DiffuseColor]">views/white_100.png</texture>
						</control>
					</itemlayout>
					<focusedlayout height="540" width="360">
						<control type="image">
							<width>360</width>
							<height>540</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
						</control>
						<control type="image">
							<width>360</width>
							<height>540</height>
							<texture colordiffuse="$VAR[DiffuseColor]">views/white_100.png</texture>
							<animation center="auto" condition="Control.HasFocus(50)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(50)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
						</control>
						<control type="image">
							<width>360</width>
							<height>540</height>
							<texture colordiffuse="$VAR[TextColor]" border="11">views/border.png</texture>
							<animation center="auto" condition="Control.HasFocus(50)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(50)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">UnFocus</animation>
						</control>
					</focusedlayout>
				</control>
				<control type="label">
					<left>2180</left>
					<top>838</top>
					<width>1510</width>
					<height>56</height>
					<font>Med60</font>
					<textcolor>$VAR[TextColor]</textcolor>
					<label>$VAR[ActorRoleLabel]</label>
					<visible>String.Contains(Control.GetLabel(5),$LOCALIZE[207])</visible>
				</control>
			</control>
		</control>

	</controls>
</window>