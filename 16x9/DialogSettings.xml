<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- settingdialog -->
	<defaultcontrol always="true">5</defaultcontrol>
	<controls>
		<!-- Background
		<include>DialogBackgroundImage</include> -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<aspectratio>stretch</aspectratio>
			<texture flipx="true" colordiffuse="$VAR[SecondaryColor]">views\vignetteInfo.png</texture>
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" center="auto" tween="Cubic" easing="out" time="500"/>
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" center="auto" tween="Cubic" easing="in" time="500"/>
			</animation>
		</control>

		<!-- Main group -->
		<control type="group" id="1000">
				<top>150</top>
			<include content="DialogHeading">
				<param name="DialogWidth" value="1820" />
				<param name="DialogHeaderId" value="2" />
			</include>
			<!-- Grouplist -->
			<control type="grouplist" id="5">
				<left>10</left>
				<onright>80</onright>
				<width>800</width>
				<height>900</height>
				<itemgap>0</itemgap>
			</control>
			<!-- Default button -->
			<control type="button" id="7">
				<width>800</width>
				<include>DialogButton</include>
			</control>
			<!-- Default radiobutton -->
			<control type="radiobutton" id="8">
				<width>800</width>
				<include>DialogButton</include>
			</control>
			<!-- Default spincontrolex -->
			<control type="spincontrolex" id="9">
				<width>800</width>
				<include>DialogButton</include>
			</control>
			<!-- Default divider -->
			<control type="image" id="11">
				<top>-1</top>
				<height>1</height>
				<texture>-</texture>
			</control>
			<!-- Default edit -->
			<control type="edit" id="12">
				<width>800</width>
				<include>DialogButton</include>
			</control>
			<!-- Default slider -->
			<control type="sliderex" id="13">
				<width>800</width>
				<include>DialogButton</include>
			</control>
			<!-- Default label -->
			<control type="label" id="14">
				<top>345</top>
				<width>78%</width>
				<height>36</height>
				<font>Med36</font>
				<textcolor>$VAR[TextColor]</textcolor>
			</control>
			<control type="grouplist" id="80">
				<onleft>5</onleft>
				<left>820</left>
				<width>800</width>
				<height>900</height>
				<itemgap>0</itemgap>
				<control type="button" id="30">
					<left>345</left>
					<width>200</width>
					<include>DialogButton</include>
				</control>
				<control type="button" id="29">
					<left>345</left>
					<width>200</width>
					<include>DialogButton</include>
				</control>
				<control type="button" id="28">
					<left>345</left>
					<width>200</width>
					<include>DialogButton</include>
				</control>
			</control>
		</control>
	</controls>
</window>