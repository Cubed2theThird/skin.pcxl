<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!--> home <!-->
	<backgroundcolor>FF000000</backgroundcolor>
	<onload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;levels=0)</onload>
	<onload>XBMC.RunScript(script.favourites)</onload>
	<onload condition="!Skin.HasSetting(installed)|Skin.String(DashboardToggle,Blank)">ReplaceWindow(9085)</onload>

	<onload condition="Skin.String(DashboardToggle, Netflix)">SetFocus(9050)</onload>
	<onload condition="!Skin.String(DashboardToggle, Netflix)">SetFocus(9000)</onload>

	<!--><onload>ReplaceWindow(pictures)</onload><!-->
	
	<onload condition="String.IsEmpty(Skin.String(MusicToggle))">Skin.SetString(MusicToggle, 1)</onload>
	<onload condition="String.IsEmpty(Skin.String(MusicBackgroundToggle))">Skin.SetString(MusicBackgroundToggle, FM)</onload>

	<onload condition="Window.Previous(Startup) + Skin.String(DashboardToggle, Game)">Control.Move(1,1)</onload>
	<onload condition="Window.Previous(Startup) + Skin.String(DashboardToggle, Vertical)">Control.SetFocus(1,1)</onload>

	<onload condition="Skin.String(DashboardToggle, Game) + Container(1).HasFocus(1) + !Window.Previous(Startup)">Control.Move(1,1)</onload>
	<onload condition="Skin.String(DashboardToggle, Game) + Container(1).HasFocus(3) + !Window.Previous(Startup)">Control.Move(1,-1)</onload>
	<onload condition="Skin.String(DashboardToggle, Game) + Container(1).HasFocus(4) + !Window.Previous(Startup)">Control.Move(1,-2)</onload>
	<onunload condition="Skin.String(DashboardToggle, Game) + Container(1).HasFocus(1)">Control.Move(1,1)</onunload>
	<onunload condition="Skin.String(DashboardToggle, Game) + Container(1).HasFocus(3)">Control.Move(1,-1)</onunload>
	<onunload condition="Skin.String(DashboardToggle, Game) + Container(1).HasFocus(4)">Control.Move(1,-2)</onunload>

	<onload condition="Skin.String(DashboardToggle, Vertical) + Container(1).HasFocus(2) + !Window.Previous(Startup)">Control.Move(1,-1)</onload>
	<onload condition="Skin.String(DashboardToggle, Vertical) + Container(1).HasFocus(3) + !Window.Previous(Startup)">Control.Move(1,-2)</onload>
	<onload condition="Skin.String(DashboardToggle, Vertical) + Container(1).HasFocus(4) + !Window.Previous(Startup)">Control.Move(1,-3)</onload>
	<onunload condition="Skin.String(DashboardToggle, Vertical) + Container(1).HasFocus(2)">Control.Move(1,-1)</onunload>
	<onunload condition="Skin.String(DashboardToggle, Vertical) + Container(1).HasFocus(3)">Control.Move(1,-2)</onunload>
	<onunload condition="Skin.String(DashboardToggle, Vertical) + Container(1).HasFocus(4)">Control.Move(1,-3)</onunload>

	<controls>

		<control type="list" id="100">
			<itemlayout height="155" width="365"/>
			<focusedlayout height="155" width="365"/>
			<content>
				<include>skinshortcuts-mainmenu</include>
			</content>
		</control>

		<control type="list" id="101">
			<itemlayout height="155" width="365"/>
			<focusedlayout height="155" width="365"/>
			<content>
				<include>skinshortcuts-submenu</include>
			</content>
		</control>

		<include>WindowBackgroundImage</include>

		<!--> Main <!-->
		<include condition="!Skin.HasSetting(KioskMode) + Skin.HasSetting(installed) + Skin.String(DashboardToggle, TV)">TVLayout</include>
		<include condition="!Skin.HasSetting(KioskMode) + Skin.HasSetting(installed) + Skin.String(DashboardToggle, Game)">GameLayout</include>
		<include condition="!Skin.HasSetting(KioskMode) + Skin.HasSetting(installed) + Skin.String(DashboardToggle, Android)">AndroidLayout</include>
		<include condition="!Skin.HasSetting(KioskMode) + Skin.HasSetting(installed) + Skin.String(DashboardToggle, Netflix)">NetflixLayout</include>

		<!--> WIP <!-->
		<include condition="!Skin.HasSetting(KioskMode) + Skin.HasSetting(installed) + Skin.String(DashboardToggle, Vertical)">VerticalLayout</include>
		<include condition="!Skin.HasSetting(KioskMode) + Skin.HasSetting(installed) + Skin.String(DashboardToggle, Oreo)">AndroidOLayout</include>
		<include condition="!Skin.HasSetting(KioskMode) + Skin.HasSetting(installed) + Skin.String(DashboardToggle, Retroarch)">RetroarchLayout</include>

		<!--> Kiosk Mode <!-->
		<include condition="Skin.HasSetting(KioskMode) + Skin.HasSetting(installed) | Skin.String(DashboardToggle, Demo)">DemoLayout</include>

		<include condition="!Skin.String(DashboardToggle, Netflix)">Logo</include>

		<!--> Clock <!-->
		<include>Clock</include>

		<control type="label">
			<left>10</left>
			<bottom>50</bottom>
			<width>100%</width>	
			<height>30</height>
			<label>31999</label>
			<aligny>left</aligny>
			<font>Light27</font>
			<textcolor>$VAR[UnFocusedColor]</textcolor>
			<visible>Skin.HasSetting(DebugInfo)</visible>					
		</control>
		<control type="label">
			<left>10</left>
			<bottom>10</bottom>
			<width>100%</width>	
			<height>30</height>
			<label>Dashboard $VAR[DashboardToggle]</label>
			<align>left</align>
			<font>Reg48</font>
			<textcolor>$VAR[UnFocusedColor]</textcolor>
			<visible>Skin.HasSetting(DebugInfo)</visible>						
		</control>

	</controls>
</window>