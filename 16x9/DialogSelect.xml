<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- selectdialog -->
	<defaultcontrol always="true">3</defaultcontrol>
	<controls>

		<!-- Background 
		<include>DialogBackgroundImage</include>-->
		<control type="group">
			<include>DialogZoomAnimation</include>
			<!-- Image -->
			<control type="group">
				<visible>!Control.HasFocus(11)</visible>
				<control type="image">
					<left>120</left>
					<centertop>540</centertop>
					<width>760</width>
					<height>86%</height>
					<texture colordiffuse="$VAR[SecondaryColor]" border="90">fo2.png</texture>
					<visible>!Control.IsVisible(6)</visible>
				</control>

				<control type="image">
					<left>120</left>
					<centertop>540</centertop>
					<width>1310</width>
					<height>86%</height>
					<texture colordiffuse="$VAR[SecondaryColor]" border="90">fo2.png</texture>
					<visible>Control.IsVisible(6)</visible>
				</control>

				<control type="image">
					<left>150</left>
					<centertop>50%</centertop>
					<width>700</width>
					<height>80%</height>
					<texture colordiffuse="$VAR[MaterialColorDark]">views/white_100.png</texture>
					<visible>!Control.IsVisible(6)</visible>
				</control>

				<control type="image">
					<left>150</left>
					<centertop>50%</centertop>
					<width>1250</width>
					<height>80%</height>
					<texture colordiffuse="$VAR[MaterialColorDark]">views/white_100.png</texture>
					<visible>Control.IsVisible(6)</visible>
				</control>

				<control type="image">
					<left>650</left>
					<top>235</top>
					<width>700</width>
					<height>576</height>
					<texture colordiffuse="$VAR[Dark]">views/white_100.png</texture>
					<visible>Control.IsVisible(6)</visible>
				</control>
			</control>

			<!-- Image -->
			<control type="image">
				<left>200</left>
				<top>225</top>
				<width>405</width>
				<height>600</height>
				<texture>$INFO[Container(6).ListItem.Icon]</texture>
				<aspectratio aligny="center">keep</aspectratio>
				<visible>Control.IsVisible(6) + !SubString(Container(6).ListItem.Icon,Default)</visible>
			</control>
			<control type="image">
				<left>200</left>
				<top>225</top>
				<width>405</width>
				<height>600</height>
				<texture>$INFO[Container(6).ListItem.Icon]</texture>
				<colordiffuse>$VAR[UnFocusedColor]</colordiffuse>
				<aspectratio aligny="center">keep</aspectratio>
				<visible>Control.IsVisible(6) + SubString(Container(6).ListItem.Icon,Default)</visible>
			</control>

			<!-- List -->
			<control type="list" id="3">
				<left>150</left>
				<top>235</top>
				<width>700</width>
				<height>740</height>
				<onup>noop</onup>
				<ondown>5</ondown>
				<onleft>5</onleft>
				<onright>5</onright>
				<orientation>vertical</orientation>
				<viewtype label="list">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<itemlayout width="700" height="96">
					<control type="label">
						<left>50</left>
						<width>700</width>
						<height>96</height>
						<font>Tile</font>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="700" height="96">
					<control type="image">
						<width>700</width>
						<height>96</height>
						<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
					</control>
					<control type="label">
						<left>50</left>
						<width>700</width>
						<height>96</height>
						<font>Tile</font>
						<textcolor>$VAR[FocusedColor2]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>

			<!-- List -->
			<control type="list" id="6">
				<left>650</left>
				<top>235</top>
				<width>700</width>
				<height>576</height>
				<onup>noop</onup>
				<ondown>5</ondown>
				<onleft>5</onleft>
				<onright>5</onright>
				<orientation>vertical</orientation>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<itemlayout width="700" height="96">
					<control type="label">
						<left>50</left>
						<width>700</width>
						<height>96</height>
						<font>Tile</font>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="700" height="96">
					<control type="image">
						<width>700</width>
						<height>96</height>
						<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
					</control>
					<control type="label">
						<left>50</left>
						<width>700</width>
						<height>96</height>
						<font>Tile</font>
						<textcolor>$VAR[FocusedColor2]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>

			<!-- Get more button -->
			<control type="button" id="5">
				<left>250</left>
				<bottom>150</bottom>
				<width>324</width>
				<height>66</height>
				<label>186</label>
				<include>DialogButton</include>
				<onleft condition="Control.IsVisible(6)">6</onleft>
				<onleft>6</onleft>
				<onright condition="!Control.IsVisible(6)">3</onright>
				<onright>6</onright>
				<onup condition="!Control.IsVisible(6)">3</onup>
				<onup>6</onup>
				<ondown condition="!Control.IsVisible(6)">3</ondown>
				<ondown>6</ondown>
				<visible>!Control.HasFocus(11)</visible>
			</control>

			<!-- Heading -->
			<control type="label" id="1">
				<left>200</left>
				<top>150</top>
				<width>1620</width>
				<height>72</height>
				<font>Large</font>
				<textcolor>$VAR[White]</textcolor>
				<visible>!Control.HasFocus(11)</visible>
			</control>

		</control>
		<!-- List -->
		<control type="list" id="11">
			<left>550</left>
			<top>400</top>
			<width>700</width>
			<height>1000</height>
			<onup>noop</onup>
			<ondown>11</ondown>
			<onleft>back</onleft>
			<onright>11</onright>
			<orientation>vertical</orientation>
			<scrolltime tween="sine" easing="out">240</scrolltime>
			<itemlayout height="150">
				<control type="group">
					<control type="image">
						<width>100</width>
						<height>100</height>
						<aspectratio>scale</aspectratio>
						<texture colordiffuse="$VAR[UnFocusedColor]">DefaultAddonService.png</texture>
					</control>
					<control type="label">
						<left>110</left>
						<width>540</width>
						<height>100</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Reg30</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
					</control>
				</control>
			</itemlayout>
			<focusedlayout height="150">
				<control type="group">
					<left>-100</left>
					<control type="image">
						<left>60</left>
						<width>150</width>
						<height>150</height>
						<aspectratio>scale</aspectratio>
						<texture colordiffuse="$VAR[FocusedColor]">DefaultAddonService.png</texture>
					</control>
					<control type="label">
						<left>200</left>
						<height>150</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Reg30</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>$VAR[FocusedColor]</textcolor>
					</control>
					<control type="label">
						<left>300</left>
						<height>230</height>
						<label>$INFO[ListItem.Property(ButtonHint)]</label>
						<font>Reg25</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>$VAR[UnFocusedColor]</textcolor>
					</control>
				</control>
			</focusedlayout>
		</control>

	</controls>

</window>
