		<!-- Hide settings warning -->
		<control type="textbox">
			<left>600</left>
			<top>894</top>
			<width>1240</width>
			<height>132</height>
			<label>31051</label>
			<textcolor>$VAR[DisabledColor]</textcolor>
			<visible>Container(1).HasFocus(11) + Skin.HasSetting(HideSettings)</visible>
