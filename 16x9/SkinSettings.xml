<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- skinsettings -->
	<backgroundcolor>$VAR[BackgroundColor]</backgroundcolor>
	<defaultcontrol always="true">9</defaultcontrol>
	<controls>

		<control type="image">
			<width>500</width>
			<height>100%</height>
			<texture colordiffuse="$VAR[SecondaryColor]">color_white.png</texture>
		</control>

		<!-- Clock -->
		<include>Clock</include>

		<!-- Skin settings -->
		<control type="group">
			<left>00</left>
			<top>155</top>
			<width>100%</width>
			<height>775</height>
			<animation type="WindowOpen" reversible="false">
				<effect type="fade" start="0" end="100" time="200"/>
				<effect type="slide" start="0,500" end="0,0" time="400" tween="cubic" easing="out"/>
			</animation>

			<!-- Heading -->
			<control type="label">
				<left>50</left>
				<top>-115</top>
				<height>70</height>
				<font>Large</font>
				<label>20077</label>
			</control>

			<!-- Left grouplist -->
			<control type="grouplist" id="9">
				<width>1000</width>
				<height>1000</height>
				<onright>2</onright>
				<onleft>noop</onleft>
				<ondown>1</ondown>
				<onup>1</onup>
				<itemgap>0</itemgap>
				<control type="list" id="1">
					<width>1000</width>
					<height>500</height>
					<itemlayout width="510" height="60">
						<control type="group">
							<left>20</left>
							<top>20</top>
							<control type="label">
								<left>20</left>
								<width>500</width>
								<height>60</height>
								<label>$INFO[Listitem.label]</label>
								<align>left</align>
								<aligny>center</aligny>
								<font>Tile</font>
								<textcolor>$VAR[UnFocusedColor2]</textcolor>
							</control>
						</control>
					</itemlayout>
					<focusedlayout width="510" height="60">
						<control type="group">
							<left>20</left>
							<top>20</top>
							<control type="image">
								<left>-5</left>
								<top>0</top>
								<width>5</width>
								<height>60</height>
								<texture colordiffuse="$VAR[MaterialColorDark]">common/white.png</texture>
								<aspectratio>stretch</aspectratio>
							</control>
							<control type="label">
								<left>20</left>
								<width>500</width>
								<height>60</height>
								<label>$INFO[Listitem.label]</label>
								<align>left</align>
								<aligny>center</aligny>
								<font>Tile</font>
								<textcolor>$VAR[MaterialColorDark]</textcolor>
							</control>
						</control>
					</focusedlayout>
					<content>
						<item id="10">
							<label>128</label>
							<onclick>Control.SetFocus(1213)</onclick>
						</item>
						<item id="11">
							<label>24997</label>
							<onclick>Control.SetFocus(1002)</onclick>
						</item>
						<item id="12">
							<label>Optional addons</label>
							<onclick>Control.SetFocus(1200)</onclick>
						</item>
						<item id="13">
							<label>10038</label>
							<onclick>Control.SetFocus(1302)</onclick>
						</item>
					</content>
				</control>
			</control>

			<!-- Right grouplist -->
			<control type="grouplist" id="2">
				<left>600</left>
				<centertop>50%</centertop>
				<width>1240</width>
				<height>450</height>
				<itemgap>0</itemgap>
				<onleft>9</onleft>
				<onright>noop</onright>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<orientation>vertical</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<!-- General options -->
				<!-- Home submenu-->
				<control type="button" id="1213">
					<width>1200</width>
					<height>60</height>
					<textwidth>1120</textwidth>
					<label>31049</label>
					<include>SettingsButton</include>
					<onclick condition="System.HasAddon(script.skinshortcuts)">RunScript(script.skinshortcuts,type=manage&amp;group=mainmenu)</onclick>
					<onclick condition="!System.HasAddon(script.skinshortcuts)">InstallAddon(script.skinshortcuts)</onclick>
					<visible>Container(1).HasFocus(10)</visible>
				</control>
				<!-- Colour picker -->
				<control type="button" id="1214">
					<width>1200</width>
					<height>60</height>
					<textwidth>1120</textwidth>
					<label>31064</label>
					<include>SettingsButton</include>
					<onclick>ActivateWindow(1103)</onclick>
					<visible>Container(1).HasFocus(10)</visible>
