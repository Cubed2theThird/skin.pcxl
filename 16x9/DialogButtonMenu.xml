		<control type="panel" id="6000">
			<left>35%</left>
			<top>120</top>
			<width>500</width>
			<height>100%</height>
			<onup>6000</onup>
			<ondown>6000</ondown>
			<onleft>Close</onleft>
			<onright>Close</onright>
			<itemgap>40</itemgap>
			<scrolltime>200</scrolltime>
			<orientation>vertical</orientation>
			<pagecontrol>2</pagecontrol>
			<focusposition>-1</focusposition>
			<viewtype>list</viewtype>
			<defaultcontrol>1</defaultcontrol>
			<itemlayout height="100" width="500">
				<control type="image">
					<width>500</width>
					<height>100</height>
					<texture colordiffuse="ff424242">color_white.png</texture>
				</control>
				<control type="label">
					<description>Title label</description>
					<left>50</left>
					<bottom>0</bottom>
					<height>100</height>
					<width>1200</width>		
					<label>$INFO[ListItem.Label]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>Reg30</font>
					<textcolor>$VAR[TextColor]</textcolor>
					<scroll>true</scroll>
				</control>
			</itemlayout>			
			<focusedlayout height="100" width="500">
				<control type="group">
					<animation type="Focus">
						<effect type="zoom" center="250,50" start="100" end="110" time="500" tween="cubic" easing="inout" />
					</animation>
					<control type="image">
						<width>500</width>
						<height>100</height>
						<texture colordiffuse="$VAR[SecondaryColor]">color_white.png</texture>
					</control>
					<control type="label">
						<description>Title label</description>
						<left>50</left>
						<bottom>0</bottom>
						<height>100</height>
						<width>1200</width>		
						<label>$INFO[ListItem.Label]</label>
						<align>left</align>
						<aligny>center</aligny>
						<font>Reg30</font>
						<textcolor>$VAR[TextColor]</textcolor>
						<scroll>true</scroll>
					</control>	
					<control type="image">
						<width>500</width>
						<height>100</height>
						<texture colordiffuse="$VAR[TextColor]" border="11,43,43,11">$VAR[BorderImage]</texture>
					</control>
				</control>
			</focusedlayout>
			<content>
				<item id="1">
					<label>13012</label>
					<onclick>XBMC.Quit()</onclick>	
					<visible>System.ShowExitButton</visible>
				</item>
				<item id="2">
					<label>13016</label>
					<onclick>XBMC.Powerdown()</onclick>
