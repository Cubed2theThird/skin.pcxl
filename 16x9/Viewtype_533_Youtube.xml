<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_533_Youtube">
		<control type="group">
			<visible>Control.IsVisible(533)</visible>
			
			<control type="image">
				<width>100%</width>
				<height>100%</height>
				<texture colordiffuse="$VAR[YoutubeBackground]">color_white.png</texture>
			</control>

			<!--> Video <!-->
			<control type="group">
				<animation type="WindowOpen">
					<effect type="slide" start="-1000,0" end="0" center="auto" tween="Cubic" easing="out" time="500"/>
				</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="-1500,0" center="auto" tween="Cubic" easing="in" time="500"/>
				</animation>
				<control type="image">
					<top>10</top>
					<left>20</left>
					<width>1140</width>
					<height>630</height>
					<aspectratio>scale</aspectratio>
					<texture background="false">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="image">
					<top>10</top>
					<left>20</left>
					<width>1140</width>
					<height>630</height>
					<aspectratio>scale</aspectratio>
					<texture colordiffuse="$VAR[Black]">color_white.png</texture>
					<visible>Player.HasVideo</visible>
				</control>
				<control type="videowindow">
					<top>10</top>
					<left>20</left>
					<width>1140</width>
					<height>630</height>
					<aspectratio>scale</aspectratio>
					<visible>Player.HasVideo</visible>
					<onclick>Fullscreen</onclick>							
				</control>
				<control type="image">
					<top>10</top>
					<left>20</left>
					<width>1140</width>
					<height>630</height>
					<texture colordiffuse="$VAR[White]" border="11,43,43,11">$VAR[BorderImage]</texture>
					<visible>Control.HasFocus(9050)</visible>
				</control>
			</control>	

			<!--> Info <!-->
			<control type="group">
				<animation type="WindowOpen">
					<effect type="slide" start="0,1000" end="0" center="auto" tween="Cubic" easing="out" time="500"/>
				</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="0,1000" center="auto" tween="Cubic" easing="in" time="500"/>
				</animation>
				<control type="image">
					<left>10</left>
					<top>650</top>
					<width>1160</width>
					<height>400</height>
					<texture colordiffuse="$VAR[YoutubeBox]">color_white.png</texture>
				</control>
				<control type="label">
					<left>20</left>
					<top>650</top>
					<width>1140</width>
					<height>70</height>
					<font>Reg35</font>
					<align>left</align>
					<scroll>true</scroll>
					<textcolor>$VAR[FocusedColor]</textcolor>
					<label>$VAR[ListLabelNF]</label>
				</control>
				<control type="label">
					<left>20</left>
					<top>680</top>
					<width>1140</width>
					<height>70</height>
					<font>Reg20</font>
					<align>left</align>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<label>$INFO[ListItem.Artist,By ]</label>
				</control>
				<control type="textbox">
					<left>20</left>
					<top>740</top>
					<right>30</right>
					<font>Reg20</font>
					<width>1140</width>
					<height>300</height>
					<align>justify</align>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<label>$INFO[ListItem.Plot]</label>
					<autoscroll delay="1000" time="3000" repeat="1000">true</autoscroll>
				</control>
			</control>
			

			<!--> List <!-->
			<control type="group">
				<animation type="WindowOpen">
					<effect type="slide" start="1000,0" end="0" center="auto" tween="Cubic" easing="out" time="500"/>
				</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="1000,0" center="auto" tween="Cubic" easing="in" time="500"/>
				</animation>
				<control type="image">
					<right>0</right>
					<width>720</width>
					<height>100%</height>
					<texture colordiffuse="$VAR[YoutubeBox]">color_white.png</texture>
				</control>
				<control type="Fixedlist" id="533">
					<right>0</right>
					<top>0</top>
					<width>700</width>
					<height>100%</height>				
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>9050</onleft>
					<onright>9051</onright>
					<preloaditems>2</preloaditems>
					<focusposition>2</focusposition>
					<movement>3</movement>
					<orientation>veritical</orientation>
					<viewtype label="31521">list</viewtype>
					<scrolltime tween="cubic" easing="out">360</scrolltime>
					<visible>String.Contains(Container.FolderPath,plugin://plugin.video.youtube)</visible>
					<itemlayout height="150">
						<control type="image">
							<width>200</width>
							<height>150</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
						</control>
						<control type="button">
							<left>100</left>
							<bottom>10</bottom>
							<width max="200">auto</width>
							<height>50</height>
							<font>Reg20</font>
							<alignx>right</alignx>
							<textwidth>0</textwidth>
							<textcolor>01000000</textcolor>
							<focusedcolor>$VAR[TextColor]</focusedcolor>
							<disabledcolor>FF484848</disabledcolor>
							<texturefocus colordiffuse="$VAR[SecondaryColor]">views/white_0.png</texturefocus>
							<texturenofocus>views/white_0.png</texturenofocus>
							<label>$INFO[ListItem.Duration]</label>
						</control>
						<control type="label">
							<left>0</left>
							<bottom>0</bottom>
							<width>190</width>
							<height>70</height>
							<font>Reg20</font>
							<align>right</align>
							<textcolor>$VAR[TextColor]</textcolor>
							<label>$INFO[ListItem.Duration]</label>
						</control>
						<control type="textbox">
							<left>220</left>
							<top>20</top>
							<width>480</width>
							<height>50</height>
							<font>Reg20</font>
							<align>left</align>
							<scroll>false</scroll>
							<textcolor>$VAR[FocusedColor]</textcolor>
							<label>$VAR[ListLabelNF]</label>
						</control>
						<control type="label">
							<left>220</left>
							<top>50</top>
							<width>480</width>
							<height>70</height>
							<font>Reg20</font>
							<align>left</align>
							<scroll>false</scroll>
							<textcolor>$VAR[UnFocusedColor]</textcolor>
							<label>$INFO[ListItem.Artist,By ]</label>
						</control>
						<control type="label">
							<left>220</left>
							<top>80</top>
							<width>480</width>
							<height>70</height>
							<font>Reg20</font>
							<align>left</align>
							<scroll>false</scroll>
							<textcolor>$VAR[UnFocusedColor]</textcolor>
							<label>$INFO[ListItem.Premiered]</label>
						</control>
					</itemlayout>
					<focusedlayout height="150" width="300">
						<control type="image">
							<width>700</width>
							<height>150</height>
							<texture colordiffuse="$VAR[Black]">views/white_50.png</texture>
						</control>
						<control type="image">
							<width>200</width>
							<height>150</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
						</control>
						<control type="button">
							<right>0</right>
							<bottom>10</bottom>
							<width min="0" max="200">auto</width>
							<height>50</height>
							<font>Reg20</font>
							<align>right</align>
							<textcolor>$VAR[TextColor]</textcolor>
							<focusedcolor>$VAR[White]</focusedcolor>
							<disabledcolor>FF484848</disabledcolor>
							<texturefocus colordiffuse="$VAR[DarkFade]">views/white_100.png</texturefocus>
							<texturenofocus>views/white_0.png</texturenofocus>
							<label>$INFO[ListItem.Duration,,]</label>
						</control>
						<control type="textbox">
							<left>220</left>
							<top>20</top>
							<width>480</width>
							<height>50</height>
							<font>Reg20</font>
							<align>left</align>
							<scroll>false</scroll>
							<textcolor>$VAR[FocusedColor]</textcolor>
							<label>$VAR[ListLabelNF]</label>
						</control>
						<control type="label">
							<left>220</left>
							<top>50</top>
							<width>480</width>
							<height>70</height>
							<font>Reg20</font>
							<align>left</align>
							<scroll>false</scroll>
							<textcolor>$VAR[UnFocusedColor]</textcolor>
							<label>$INFO[ListItem.Artist,By ]</label>
						</control>
						<control type="label">
							<left>220</left>
							<top>80</top>
							<width>480</width>
							<height>70</height>
							<font>Reg20</font>
							<align>left</align>
							<scroll>false</scroll>
							<textcolor>$VAR[UnFocusedColor]</textcolor>
							<label>$INFO[ListItem.Premiered]</label>
						</control>
					</focusedlayout>
				</control>
			</control>
		</control>
	</include>
</includes>