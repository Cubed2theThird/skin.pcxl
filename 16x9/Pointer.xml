<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- pointer -->
	<defaultcontrol>-</defaultcontrol>

	<controls>

		<!-- Pointer -->
		<control type="image" id="1">
			<width>25</width>
			<height>25</height>
			<texture colordiffuse="$VAR[White]">mouse.png</texture>
			<visible>!Skin.HasSetting(HideMouse)</visible>
		</control>

		<!-- Pointer focus -->
		<control type="image" id="2">
			<width>25</width>
			<height>25</height>
			<texture colordiffuse="$VAR[White]">mouse.png</texture>
			<visible>!Skin.HasSetting(HideMouse)</visible>
		</control>

		<!-- Pointer drag -->
		<control type="image" id="3">
			<width>25</width>
			<height>25</height>
			<texture>mouse.png</texture>
			<visible colordiffuse="$VAR[White]">!Skin.HasSetting(HideMouse)</visible>
		</control>

		<!-- Pointer click -->
		<control type="image" id="4">
			<width>25</width>
			<height>25</height>
			<texture colordiffuse="$VAR[White]">mouse.png</texture>
			<visible>!Skin.HasSetting(HideMouse)</visible>
