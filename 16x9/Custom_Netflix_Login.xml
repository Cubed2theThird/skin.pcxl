<?xml version="1.0" encoding="UTF-8"?>
<window id="9500">
	<backgroundcolor>FF000000</backgroundcolor>
	<defaultcontrol always="true">9000</defaultcontrol>
    <onload condition="Window.Previous(videos)">close</onload>
	<onload>AlarmClock(focus,Control.SetFocus(9000),00:01,silent)</onload>
	<onload>Skin.SetString(snapwindow, 9500)</onload>
	<onload>Skin.SetString(snapico, home/snap/netflix.jpg,0)</onload>
	<onload>Skin.SetString(snapname,Netflix)</onload>
	<controls>

		<control type="label">
			<centerleft>50%</centerleft>
			<centertop>30%</centertop>
			<width>550</width>
			<height>66</height>
			<label>Who's Watching?</label>
			<font>NetflixHeader</font>
			<textcolor>$VAR[TextColor]</textcolor>
			<align>center</align>
			<aligny>center</aligny>
			<textoffsetx>20</textoffsetx>
			<scroll>false</scroll>
		</control>

		<control type="wraplist" id="9000">
			<description>Control list</description>
			<height>500</height>
			<width>270</width>
			<centerleft>50%</centerleft>
			<centertop>70%</centertop>
			<onup>noop</onup>
			<ondown>noop</ondown>
			<onleft>noop</onleft>
			<onright>noop</onright>
			<orientation>horizontal</orientation>
			<scrolltime tween="sine" easing="inout">360</scrolltime>
			<pagecontrol>2</pagecontrol>
			<viewtype>list</viewtype>
			<defaultcontrol>1</defaultcontrol>
			<include>HomeZoomAnimation2</include>
			<itemlayout height="350" width="260">
				<control type="group">
					<left>20</left>
					<top>20</top>
					<control type="image">
						<width>230</width>
						<height>230</height>
						<texture colordiffuse="$VAR[SecondaryColor]">color_white.png</texture>
					</control>
					<control type="image">
						<width>230</width>
						<height>230</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="label">
						<left>0</left>
						<bottom>30</bottom>
						<width>230</width>
						<height>66</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Tile</font>
						<textcolor>$VAR[TextColor]</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<textoffsetx>20</textoffsetx>
						<scroll>false</scroll>
					</control>
				</control>
			</itemlayout>
			<focusedlayout height="350" width="260">
				<control type="group">
					<left>20</left>
					<top>20</top>
					<animation effect="zoom" center="auto" start="100" end="120" time="200">Focus</animation>
					<animation effect="zoom" center="auto" start="120" end="100" time="100">UnFocus</animation>
					<control type="image">
						<width>230</width>
						<height>330</height>
						<texture colordiffuse="$VAR[SecondaryColor]">color_white.png</texture>
					</control>
					<control type="image">
						<width>230</width>
						<height>230</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="label">
						<left>0</left>
						<bottom>30</bottom>
						<width>230</width>
						<height>66</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Tile</font>
						<textcolor>$VAR[TextColor]</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<textoffsetx>20</textoffsetx>
						<scroll>false</scroll>
					</control>
					<control type="image">
						<left>-30</left>
						<top>-35</top>
						<width>290</width>
						<height>400</height>
						<texture colordiffuse="$VAR[SecondaryColor]" border="40">fo.png</texture>
					</control>
				</control>
			</focusedlayout>
			<content target="videos">plugin://plugin.video.netflix</content>
		</control>

		<control type="image">
			<left>50</left>
			<top>-50</top>
			<width>300</width>
			<height>300</height>
			<texture>custom/netflix.png</texture>
			<aspectratio>keep</aspectratio>
		</control>
	</controls>	
</window>