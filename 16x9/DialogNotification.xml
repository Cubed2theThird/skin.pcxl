<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- notification -->
	<controls>
		<control type="group">
			<right>0</right>
			<bottom>10</bottom>
			<width>600</width>
			<height>150</height>
			<include>NotificationToastAnimation</include>
			<animation effect="fade" start="100" end="0" time="0" condition="Window.IsActive(fullscreenvideo)">Conditional</animation>
			<!-- Background image -->
			<control type="image">
				<right>20</right>
				<width>120%</width>
				<height>150</height>
				<texture colordiffuse="$VAR[MaterialColorDark]" border="9">views/Card_bg_white.png</texture>
			</control>
			<!-- Heading -->
			<control type="label" id="401">
				<left>20</left>
				<top>15</top>
				<width>90%</width>
				<height>50</height>
				<scroll>true</scroll>
				<font>Reg30-Notification</font>
        		<align>left</align>
        		<label>Test Text Test Text Test Text Test Text </label>
				<textcolor>$VAR[White]</textcolor>
				<wrapmultiline>true</wrapmultiline>
			</control>
			<!-- Details -->
			<control type="textbox" id="402">
				<left>20</left>
				<top>77</top>
				<width>90%</width>
				<height>45%</height>
				<scroll>true</scroll>
				<font>light27</font>
				<autoscroll delay="1000" time="5000" repeat="2000">true</autoscroll>
				<label>Random words Random words Random words Random words Random words Random words Random words Random words Random words Random words Random words Random words Random words Random words Random words Random words Random words Random words Random words Random words Random words </label>
				<textcolor>$VAR[White]</textcolor>
			</control>
			<!-- Default image -->
			<control type="image" id="400">
				<right>100%</right>
				<centertop>50%</centertop>
				<width>130</width>
				<height>130</height>
				<texture>color_white.png</texture>
				<colordiffuse>$VAR[White]</colordiffuse>
			</control>
		</control>
	</controls>
</window>