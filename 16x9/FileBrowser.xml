<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- filebrowser -->
	<defaultcontrol always="true">450</defaultcontrol>
	<include>DialogZoomAnimation</include>

	<controls>

		<!-- Background 
		<include>DialogBackgroundImage</include>-->

		<!-- Image -->
		<control type="image">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>88.1%</width>
			<height>86%</height>
			<texture colordiffuse="$VAR[SecondaryColor]" border="90">fo2.png</texture>
		</control>

		<control type="image">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>85%</width>
			<height>80%</height>
			<texture colordiffuse="$VAR[BackgroundColor]">views/white_100.png</texture>
		</control>

		<control type="image">
			<left>200</left>
			<top>235</top>
			<width>700</width>
			<height>670</height>
			<texture colordiffuse="$VAR[Dark]">views/white_100.png</texture>		
		</control>

		<!-- List -->
		<control type="list" id="450">
			<left>200</left>
			<top>235</top>
			<width>700</width>
			<height>670</height>
			<onup>noop</onup>
			<ondown>noop</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<orientation>vertical</orientation>
			<viewtype label="list">list</viewtype>
			<scrolltime tween="sine" easing="out">240</scrolltime>
			<itemlayout width="700" height="96">
				<control type="label">
					<left>50</left>
					<width>700</width>
					<height>96</height>
					<font>Tile</font>
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout width="700" height="96">
				<control type="image">
					<width>700</width>
					<height>96</height>
					<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
				</control>
				<control type="label">
					<left>50</left>
					<width>700</width>
					<height>96</height>
					<font>Tile</font>
					<textcolor>$VAR[FocusedColor2]</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>

		</control>

		<!-- List -->
		<control type="list" id="451">
			<left>200</left>
			<top>235</top>
			<width>700</width>
			<height>670</height>
			<onup>noop</onup>
			<ondown>noop</ondown>
