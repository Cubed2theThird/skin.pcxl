					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout width="700" height="96">
				<control type="image">
					<width>700</width>
					<height>96</height>
					<texture colordiffuse="$VAR[SecondaryColor]">views/white_100.png</texture>
				</control>
				<control type="label">
					<left>50</left>
					<width>700</width>
					<height>96</height>
					<font>Tile</font>
					<textcolor>$VAR[FocusedColor2]</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
		</control>

		<!-- Button grouplist -->
		<control type="grouplist" id="9000">
			<right>450</right>
			<top>235</top>
			<width>324</width>
			<height>200</height>
			<itemgap>0</itemgap>
			<onleft>450</onleft>
			<onright>450</onright>
			<onup>noop</onup>
			<ondown>noop</ondown>
			<orientation>vertical</orientation>

