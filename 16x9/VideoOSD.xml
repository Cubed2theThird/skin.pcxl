<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- videoosd -->
	<defaultcontrol always="true">1</defaultcontrol>
	<controls>
			<!-- Background -->
			<control type="image">
				<include>FullscreenDimensions</include>
				<aspectratio>stretch</aspectratio>
				<texture colordiffuse="$VAR[Black]">views\vignetteInfo_light.png</texture>
				<animation type="WindowOpen">
					<effect type="fade" start="0" end="100" center="auto" tween="Cubic" easing="out" time="500"/>
				</animation>
				<animation type="WindowClose">
					<effect type="fade" start="100" end="0" center="auto" tween="Cubic" easing="in" time="500"/>
				</animation>
			</control>
			
			<control type="group">
				<width>100%</width>
				<height>234</height>
				<animation type="WindowOpen">
					<effect type="slide" start="2000" end="0" center="auto" tween="Cubic" easing="out" time="500"/>
					<!--><effect type="fade" start="0" end="100" time="200"/><!-->
				</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="2000" center="auto" tween="Cubic" easing="in" time="500"/>
					<!--><effect type="fade" start="0" end="100" time="200"/><!-->
				</animation>

				<!-- Title -->
				<control type="label">
					<right>20</right>
					<top>0</top>
					<width>40%</width>
					<height>250</height>
					<align>right</align>
					<font>Reg60</font>
					<wrapmultiline>true</wrapmultiline> 
					<textcolor>$VAR[FocusedColor]</textcolor>
					<label>$VAR[VideoPlayerTitle]</label>
					<autoscroll delay="5000" time="1400" repeat="10000">true</autoscroll>
				</control>

				<!-- Plot -->
				<control type="textbox">
					<right>20</right>
					<top>270</top>
					<width>60%</width>
					<height>600</height>
					<align>right</align>
					<label>$INFO[VideoPlayer.Plot]</label>
					<font>Reg30</font>
					<wrapmultiline>true</wrapmultiline> 
					<textcolor>$VAR[UnFocusedColor]</textcolor>
					<autoscroll delay="5000" time="1400" repeat="10000">true</autoscroll>
				</control>
			</control>

			<!-- Player forwarding/rewinding -->
			<control type="group">
				<left>30</left>
				<bottom>150</bottom>
				<width>80</width>
				<height>60</height>
				<visible>!Window.IsVisible(VideoBookmarks)</visible>
				<visible>player.forwarding | player.rewinding | player.paused</visible>
				<animation type="WindowOpen">
					<effect type="slide" start="0,1000" end="0" center="auto" tween="Cubic" easing="out" time="500"/>
					<!--><effect type="fade" start="0" end="100" time="200"/><!-->
				</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="0,1000" center="auto" tween="Cubic" easing="in" time="500"/>
					<!--><effect type="fade" start="0" end="100" time="200"/><!-->
				</animation>

				<!-- Status -->
				<control type="label">
					<width>80</width>
					<height>60</height>
					<font>Font36</font>
					<align>center</align>
					<label>$VAR[PlayerStatus]</label>
					<textcolor>$VAR[White]</textcolor>
				</control>

				<!-- Pause -->
				<control type="image">
					<left>10</left>
					<width>60</width>
					<height>60</height>
					<label>  </label>
					<texture colordiffuse="$VAR[White]">osd/OSDPauseNF.png</texture>
					<visible>player.paused</visible>
				</control>
			</control>

			<!-- Player skipping -->
			<control type="group">
				<right>150</right>
				<top>820</top>
				<width>140</width>
				<height>60</height>
				<visible>!Window.IsVisible(VideoBookmarks)</visible>
				<visible>Player.DisplayAfterSeek + IntegerGreaterThan(Player.ChapterCount,0)</visible>
				<animation type="WindowOpen">
					<effect type="slide" start="0,1000" end="0" center="auto" tween="Cubic" easing="out" time="500"/>
					<!--><effect type="fade" start="0" end="100" time="200"/><!-->
				</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="0,1000" center="auto" tween="Cubic" easing="in" time="500"/>
					<!--><effect type="fade" start="0" end="100" time="200"/><!-->
				</animation>

				<!-- Status -->
				<control type="label">
					<width>140</width>
					<height>60</height>
					<font>Font27</font>
					<align>center</align>
					<label>[B]$INFO[Player.Chapter,(,/]$INFO[Player.ChapterCount,,)][/B]</label>
					<textcolor>$VAR[White]</textcolor>
				</control>
			</control>

			<!-- Progress -->
			<control type="group">
				<left>0</left>
				<bottom>80</bottom>
				<width>1620</width>
				<height>60</height>
				<animation type="WindowOpen">
					<effect type="slide" start="0,500" end="0" center="auto" tween="Cubic" easing="inout" time="500"/>
					<!--><effect type="fade" start="0" end="100" time="200"/><!-->
				</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="0,500" center="auto" tween="Cubic" easing="inout" time="500"/>
					<!--><effect type="fade" start="0" end="100" time="200"/><!-->
				</animation>

				<!--  Current position/Time remaining -->
				<control type="label">
					<left>50</left>
					<bottom>30</bottom>
					<width>360</width>
					<height>60</height>
					<align>left</align>
					<font>Reg30</font>
					<textcolor>$VAR[White]</textcolor>
					<label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
				</control>

				<!-- Current Time/End Time -->
				<control type="label">
					<right>-250</right>
					<bottom>30</bottom>
					<width>600</width>
					<height>60</height>
					<align>right</align>
					<font>Reg30</font>
					<textcolor>$VAR[White]</textcolor>
					<label>$INFO[System.Time,$LOCALIZE[142] , / ]$INFO[Player.FinishTime,$LOCALIZE[19081] ]</label>
				</control>

				<control type="label">
					<right>-250</right>
					<bottom>60</bottom>
					<width>600</width>
					<height>60</height>
					<align>right</align>
					<font>Reg30</font>
					<textcolor>$VAR[White]</textcolor>
					<label>$INFO[Player.SeekStepSize]</label>
				</control>

				<!--  Progress bar -->
				<control type="group">
					<width>100%</width>
					<control type="progress">
						<left>50</left>
						<bottom>20</bottom>
						<width>1820</width>
						<height>10</height>
						<info>Player.Progress</info>

						<texturebg border="2" colordiffuse="$VAR[White]">osd/OSDProgressBack.png</texturebg>
						<lefttexture>-</lefttexture>
						<midtexture border="2" colordiffuse="$VAR[White]">osd/OSDProgressBar.png</midtexture>
						<righttexture>-</righttexture>
						<overlaytexture>-</overlaytexture>
					</control>

					<!--  Cache bar -->
					<control type="progress" id="1">
						<left>50</left>
						<bottom>20</bottom>
						<width>1820</width>
						<height>10</height>
						<info>Player.ProgressCache</info>
						<texturebg colordiffuse="$VAR[UnFocusedColor]" border="2">osd/OSDProgressBack.png</texturebg>
						<lefttexture>-</lefttexture>
						<midtexture colordiffuse="$VAR[UnFocusedColor]" border="2">osd/OSDProgressBar.png</midtexture>
						<righttexture>-</righttexture>
						<overlaytexture>-</overlaytexture>
					</control>
				</control>
			</control>

			<control type="group">
				<left>50</left>
				<bottom>20</bottom>
				<width>95%</width>
				<height>60</height>
				<visible>!Window.IsVisible(VideoBookmarks)</visible>
				<animation type="WindowOpen" condition="!Window.IsActive(seekbar) + !Window.IsActive(fullscreeninfo)">
					<effect type="slide" start="0,500" end="0" center="auto" tween="Cubic" easing="inout" time="500"/>
				</animation>
				<animation type="WindowClose" condition="!Window.IsActive(seekbar) + !Window.IsActive(fullscreeninfo)">
					<effect type="slide" start="0" end="0,500" center="auto" tween="Cubic" easing="inout" time="500"/>
				</animation>

				<!-- Controls -->
				<control type="grouplist">
					<width>800</width>
					<height>60</height>
					<itemgap>10</itemgap>
					<onleft>18</onleft>
					<onright>10</onright>
					<onup>Close</onup>
					<ondown>Close</ondown>
					<orientation>horizontal</orientation>
					<animation type="WindowOpen">
						<effect type="slide" start="0,1000" end="0" center="auto" tween="Cubic" easing="out" time="500"/>
					</animation>
					<animation type="WindowClose">
						<effect type="slide" start="0" end="0,1000" center="auto" tween="Cubic" easing="in" time="500"/>
					</animation>

					<!-- Play/Pause -->
					<include condition="Player.PauseEnabled">OSDPlayStopButtons</include>
					<!-- Stop -->
					<include condition="!Player.PauseEnabled">OSDStopButton</include>
					<!-- Skip Back -->
					<control type="button" id="3">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<onleft>2</onleft>
						<onright>4</onright>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDPrevTrackFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDPrevTrackNF.png</texturenofocus>
						<onclick>PlayerControl(Previous)</onclick>
						<visible>!VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!-- Rewind -->
					<control type="button" id="4">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<onleft>3</onleft>
						<onright>5</onright>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDRewindFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDRewindNF.png</texturenofocus>
						<onclick>PlayerControl(Rewind)</onclick>
						<visible>Player.SeekEnabled</visible>
					</control>
					<!-- Up -->
					<control type="button" id="5">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<onleft>4</onleft>
						<onright>6</onright>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDUpFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDUpNF.png</texturenofocus>
						<onclick>PlayerControl(Next)</onclick>
						<visible>VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!-- Down -->
					<control type="button" id="6">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<onleft>5</onleft>
						<onright>7</onright>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDDownFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDDownNF.png</texturenofocus>
						<onclick>PlayerControl(Next)</onclick>
						<visible>VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!-- Fast Forward -->
					<control type="button" id="7">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<onleft>6</onleft>
						<onright>8</onright>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDForwardFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDForwardNF.png</texturenofocus>
						<onclick>PlayerControl(Forward)</onclick>
						<visible>Player.SeekEnabled</visible>
					</control>
					<!-- Next -->
					<control type="button" id="8">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<onleft>7</onleft>
						<onright>9</onright>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDNextTrackFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDNextTrackNF.png</texturenofocus>
						<onclick>PlayerControl(Next)</onclick>
						<visible>!VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!-- Record -->
					<control type="togglebutton" id="9">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<onleft>8</onleft>
						<onright>10</onright>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDRecordOffFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDRecordOffNF.png</texturenofocus>
						<alttexturefocus>osd/OSDRecordOnFO.png</alttexturefocus>
						<alttexturenofocus>osd/OSDRecordOnNF.png</alttexturenofocus>
						<usealttexture>Player.Recording</usealttexture>
						<onclick>PlayerControl(Record)</onclick>
						<visible>Player.CanRecord</visible>
					</control>

				</control>

				<!-- Options -->
				<control type="grouplist">
					<right>0</right>
					<width>360</width>
					<height>60</height>
					<align>right</align>
					<itemgap>0</itemgap>
					<onleft>9</onleft>
					<onright>1</onright>
					<onup>Close</onup>
					<ondown>Close</ondown>
					<orientation>horizontal</orientation>
					<animation type="WindowOpen">
						<effect type="slide" start="0,1000" end="0" center="auto" tween="Cubic" easing="out" time="500"/>
					</animation>
					<animation type="WindowClose">
						<effect type="slide" start="0" end="0,1000" center="auto" tween="Cubic" easing="in" time="500"/>
					</animation>


					<!-- 3D mode -->
					<control type="button" id="10">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<texturefocus colordiffuse="$VAR[White]">osd/OSD3DFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSD3DNF.png</texturenofocus>
						<onclick>StereoMode</onclick>
						<visible>VideoPlayer.IsStereoscopic</visible>
					</control>
					<!-- Video Settings -->
					<control type="button" id="11">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDVideoFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDVideoNF.png</texturenofocus>
						<onclick>ActivateWindow(osdvideosettings)</onclick>
					</control>
					<!-- Audio Settings -->
					<control type="button" id="12">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDAudioFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDAudioNF.png</texturenofocus>
						<onclick>ActivateWindow(osdaudiosettings)</onclick>
					</control>
					<!-- Bookmarks -->
					<control type="button" id="13">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDBookmarksFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDBookmarksNF.png</texturenofocus>
						<onclick>ActivateWindow(videobookmarks)</onclick>
						<visible>!VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!-- Subtitles -->
					<control type="button" id="14">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDSubtitlesFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDSubtitlesNF.png</texturenofocus>
						<onclick>Close</onclick>
						<onclick>ActivateWindow(SubtitleSearch)</onclick>
						<visible>!VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!-- Channels -->
					<control type="button" id="15">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDChannelFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDChannelNF.png</texturenofocus>
						<onclick>ActivateWindow(PVROSDChannels)</onclick>
						<visible>VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!-- Channel EPG -->
					<control type="button" id="16">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDEPGFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDEPGNF.png</texturenofocus>
						<onclick>ActivateWindow(PVROSDGuide)</onclick>
						<visible>VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!-- Teletext -->
					<control type="button" id="17">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDTextFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDTextNF.png</texturenofocus>
						<onclick>ActivateWindow(Teletext)</onclick>
						<visible>VideoPlayer.Content(LiveTV)</visible>
					</control>
					<!-- DVD menu -->
					<control type="button" id="18">
						<width>60</width>
						<height>60</height>
						<label>  </label>
						<texturefocus colordiffuse="$VAR[White]">osd/OSDDvdFO.png</texturefocus>
						<texturenofocus colordiffuse="$VAR[White]">osd/OSDDvdNF.png</texturenofocus>
						<onclick>PlayerControl(ShowVideoMenu)</onclick>
						<visible>VideoPlayer.HasMenu</visible>
					</control>

				</control>
			</control>

	</controls>
</window>