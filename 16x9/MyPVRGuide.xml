					</control>
					<control type="label">
						<top>35</top>
						<right>30</right>
						<width>40%</width>
						<height>30</height>
						<align>right</align>
						<label>$INFO[ListItem.Genre,[COLOR grey]$LOCALIZE[515]:[/COLOR] ]</label>
					</control><!-->
				</control>
				<control type="textbox">
					<left>50</left>
					<top>85</top>
					<right>30</right>
					<width>70%</width>
					<height>170</height>
					<align>justify</align>
					<label>$INFO[ListItem.Plot]</label>
					<autoscroll delay="10000" time="3000" repeat="10000">Skin.HasSetting(AutoScroll)</autoscroll>
				</control>
			</control>
		</control>
