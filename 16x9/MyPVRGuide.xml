<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<backgroundcolor>$VAR[BackgroundColor]</backgroundcolor>
	<views>50</views>
	<menucontrol>9000</menucontrol>
	<controls>
		<include>WindowBackgroundImage</include>
		<include>WindowBackgroundVideo</include>
		<control type="group">	
			<animation type="WindowClose">
				<effect type="slide" start="0" end="0,1000" center="auto" tween="Cubic" easing="inout" time="800"/>
				<effect type="zoom" start="100" end="80" center="auto" tween="Cubic" easing="inout" time="500"/>
			</animation>
			<control type="group">
				<animation type="WindowOpen">
					<effect type="slide" start="0,1000" end="0" center="auto" tween="Cubic" easing="inout" time="1000"/>
				</animation>
				<description>Guide Timeline</description>
				<visible>Control.IsVisible(50)</visible>

				<!--> Grid <!-->
				<control type="epggrid" id="50">
					<left>0</left>
					<right>0</right>
					<bottom>0</bottom>
					<height>425</height>
					<orientation>vertical</orientation>
					<pagecontrol>60</pagecontrol>
					<scrolltime tween="quadratic" easing="out">300</scrolltime>
					<timeblocks>30</timeblocks>
					<rulerunit>1</rulerunit>
					<onleft>11</onleft>
					<onright>60</onright>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<viewtype>icon</viewtype>
					<focusposition>-1</focusposition>
					<movement>1</movement>
					<progresstexture border="0,10,18,14" colordiffuse="$VAR[SecondaryColor]">common/TimeBar.png</progresstexture>
					<rulerdatelayout  height="1" width="1700">
						<control type="label">
							<width>1700</width>
							<height>45</height>
							<font>font24</font>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>"$VAR[SecondaryColor]"</textcolor>
							<align>center</align>
							<aligny>center</aligny>
						</control>
					</rulerdatelayout>
					<rulerlayout height="1" width="1400">
						<control type="label">
							<width>365</width>
							<height>45</height>
							<font>font12</font>
							<label>$INFO[ListItem.Label]</label>
							<textoffsetx>10</textoffsetx>
							<textcolor>"$VAR[SecondaryColor]"</textcolor>
						</control>
					</rulerlayout>
					<channellayout height="100" width="280">
						<control type="image">
							<top>0</top>
							<left>0</left>
							<width>270</width>
							<height>100</height>
							<fadetime>400</fadetime>
							<texture colordiffuse="$VAR[DarkFade]">color_white.png</texture>
						</control>
						<control type="label">
							<left>2</left>
							<bottom>0</bottom>
							<width>75</width>
							<height>100</height>
							<font>Reg20</font>
							<label>$INFO[ListItem.ChannelNumberLabel]</label>
							<textcolor>$VAR[UnFocusedColor]</textcolor>
							<align>center</align>
							<aligny>center</aligny>
						</control>
						<control type="label" id="1">
							<left>68</left>
							<top>-2</top>
							<height>100</height>
							<font>Reg20</font>
							<label>$INFO[ListItem.ChannelName]</label>
							<aligny>center</aligny>
							<textoffsetx>10</textoffsetx>
						</control>
					</channellayout>
					<focusedchannellayout height="100" width="280">
						<control type="image">
							<top>0</top>
							<left>0</left>
							<width>270</width>
							<height>100</height>
							<fadetime>400</fadetime>
							<texture colordiffuse="$VAR[SecondaryColor]">color_white.png</texture>
						</control>
						<control type="label">
							<left>2</left>
							<bottom>0</bottom>
							<width>75</width>
							<height>100</height>
							<font>Reg20</font>
							<label>$INFO[ListItem.ChannelNumberLabel]</label>
							<textcolor>$VAR[UnFocusedColor]</textcolor>
							<align>center</align>
							<aligny>center</aligny>
						</control>
						<control type="label" id="1">
							<left>68</left>
							<top>-2</top>
							<height>100</height>
							<font>Reg20</font>
							<label>$INFO[ListItem.ChannelName]</label>
							<aligny>center</aligny>
							<textoffsetx>10</textoffsetx>
						</control>
					</focusedchannellayout>
					<itemlayout height="100" width="50">
						<control type="image" id="2">
							<top>5</top>
							<width>50</width>
							<height>100</height>
							<texture colordiffuse="$VAR[MaterialColor]">color_white.png</texture>
						</control>
						<control type="image" id="2">
							<top>5</top>
							<width>50</width>
							<height>100</height>
							<texture colordiffuse="$VAR[MaterialColorDark]" border="10">views/border.png</texture>
						</control>
						<control type="label" id="1">
							<left>10</left>
							<top>0</top>
							<width>40</width>
							<height>100</height>
							<aligny>center</aligny>
							<font>Reg20</font>
							<wrapmultiline>true</wrapmultiline>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="image">
							<left>6</left>
							<top>40</top>
							<width>20</width>
							<height>20</height>
							<texture>$VAR[PVRTimerIcon]</texture>
						</control>
					</itemlayout>
					<focusedlayout height="100" width="50">
						<control type="image" id="2">
							<top>5</top>
							<width>50</width>
							<height>100</height>								
							<texture colordiffuse="$VAR[DarkFade]">lists/focus.png</texture>
							<visible>Control.HasFocus(50)</visible>
						</control>
						<control type="image" id="2">
							<top>5</top>
							<width>50</width>
							<height>100</height>	
							<texture colordiffuse="$VAR[SecondaryColor]">color_white.png</texture>
						</control>
						<control type="image" id="2">
							<top>5</top>
							<width>50</width>
							<height>100</height>
							<texture colordiffuse="$VAR[White]" border="10">views/border.png</texture>
						</control>
						<control type="image" id="2">
							<top>5</top>
							<width>50</width>
							<height>100</height>
							<top>0</top>
							<texture colordiffuse="$VAR[DarkFade]">color_white.png</texture>
							<visible>!Control.HasFocus(50)</visible>
						</control>
						<control type="label" id="1">
							<left>10</left>
							<top>0</top>
							<width>30</width>
							<height>100</height>
							<aligny>center</aligny>
							<font>Reg20</font>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="image">
							<left>6</left>
							<top>40</top>
							<width>20</width>
							<height>20</height>
							<texture>$VAR[PVRTimerIcon]</texture>
						</control>
					</focusedlayout>
				</control>
			</control>

